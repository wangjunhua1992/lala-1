<template name="zan-field">
    <view class="zan-cell zan-field {{error?'zan-field--error':''}} {{mode==='wrapped'?'zan-field--wrapped':''}}">
        <view class="zan-cell__hd zan-field__title" wx:if="{{title}}">{{title}}</view>
        <textarea autoHeight bindblur="_handleZanFieldBlur" bindfocus="_handleZanFieldFocus" bindinput="_handleZanFieldChange" class="zan-field__input zan-cell__bd {{right?'zan-field__input--right':''}}" data-component-id="{{componentId||''}}" disabled="{{disabled}}" focus="{{focus}}" name="{{name||componentId||''}}" placeholder="{{placeholder}}" placeholderClass="zan-field__placeholder" value="{{value}}" wx:if="{{type==='textarea'}}"></textarea>
        <input bindblur="_handleZanFieldBlur" bindfocus="_handleZanFieldFocus" bindinput="_handleZanFieldChange" class="zan-field__input zan-cell__bd {{right?'zan-field__input--right':''}}" data-component-id="{{componentId||''}}" disabled="{{disabled}}" focus="{{focus}}" name="{{name||componentId||''}}" placeholder="{{placeholder}}" placeholderClass="zan-field__placeholder" type="{{inputType||'text'}}" value="{{value}}" wx:else></input>
    </view>
</template>
