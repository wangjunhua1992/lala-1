page {
    background-color: #f5f5f5;
    font-size: 14px;
}

.page-login .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    margin: 40px auto 0px;
    border: 1px solid #eee;
}

.page-login .avatar image {
    width: 100%;
    height: 100%;
}

.page-login .plateform-title {
    text-align: center;
    font-size: 15px;
    margin: 10px 0 20px;
    color: #4FAE52;
}

.page-login .input-group {
    width: 100%;
    padding: 0 40px;
    box-sizing: border-box;
}

.page-login .input-group .input {
    border-bottom: 1px solid #dadada;
    padding: 10px 0px;
    margin-bottom: 20px;
}

.page-login .input-group .input:last-child {
    margin-bottom: 10px;
}

.page-login .input-group .input .right {
    width: 100%;
}

.page-login .input-group .input .right input {
    font-size: 16px;
}

.page-login .input-group .input .right .zan-icon {
    color: #999;
    font-size: 20px;
}

.page-login .save-btn {
    padding: 0 40px;
    margin-top: 40px;
}

.page-login .input-group .input .input-placeholder {
    color: #ccc;
}

.page-login .operation {
    padding: 0px 40px;
    color: #999;
}