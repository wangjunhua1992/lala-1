page {
    background-color: #f5f5f5;
    font-size: 14px;
}

.green {
    color: #4FAE52;
}

.page-count .nav-tab {
    height: 50px;
    font-size: 14px;
    background: #fff;
}

.page-count .nav-tab .nav-item {
    height: 100%;
    width: 50%;
    text-align: center;
    line-height: 50px;
    color: #333;
    position: relative;
}

.page-count .nav-tab .nav-item.active {
    font-weight: bold;
    color: #4FAE52;
}

.page-count .nav-tab .nav-item.active:after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 10%;
    width: 80%;
    height: 3px;
    background-color: #4FAE52;
}

.page-count .count-time {
    padding: 10px 15px;
    color: #999;
    width: 100%;
}

.page-count .category {
    padding: 15px;
    background-color: #fff;
    margin-bottom: 10px;
}

.page-count .category .title {
    font-size: 15px;
    margin-bottom: 15px;
}

.page-count .count-items {
    box-sizing: border-box;
    width: 100%;
}

.page-count .count-items .count-item {
    width: 33.3333%;
    text-align: center;
    line-height: 25px;
    font-size: 16px;
}

.page-count .count-items .count-item:first-child {
    border-right: 1rpx solid #4FAE52;
}

.page-count .count-items .count-item:nth-child(2) {
    border-right: 1rpx solid #4FAE52;
}