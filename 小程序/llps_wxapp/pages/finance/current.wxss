page {
    background-color: #f5f5f5;
}

.page-accountlist {
    width: 100%;
}

.page-accountlist .header {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    height: 45px;
    font-size: 16px;
    background: #4FAE52;
    color: #FFF;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10000;
}

.page-accountlist .zan-panel .zan-cell__text.add {
    color: #4CD964;
    font-weight: bold;
}

.page-accountlist .zan-panel .zan-cell__text.del {
    color: #F6383A;
    font-weight: bold;
}

.page-accountlist .nav-tab {
    height: 50px;
    font-size: 14px;
    background-color: #fff;
    position: fixed;
    top: 45px;
    left: 0;
    right: 0;
    z-index: 10000;
}

.page-accountlist .nav-tab .nav-item {
    height: 100%;
    width: 50%;
    text-align: center;
    line-height: 50px;
    color: #333;
    position: relative;
}

.page-accountlist .nav-tab .nav-item.active {
    font-weight: bold;
    color: #4FAE52;
}

.page-accountlist .nav-tab .nav-item.active:after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 10%;
    width: 80%;
    height: 3px;
    background-color: #4FAE52;
}

.page-accountlist .record-content {
    margin-top: 95px;
    width: 100%;
    box-sizing: border-box;
}

.page-accountlist .nodata {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    position: relative;
}

.page-accountlist .nodata .nodata-container {
    width: 90%;
    height: 120px;
    position: absolute;
    top: 160px;
    left: 50%;
    transform: translateX(-50%);
}

.page-accountlist .nodata .box-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background-color: #d8d8d8;
    text-align: center;
    line-height: 80px;
    margin: 0 auto;
}

.page-accountlist .nodata .box-icon .icon {
    color: #fff;
    font-size: 30px;
}

.page-accountlist .nodata .text {
    text-align: center;
    height: 40px;
    line-height: 40px;
    color: #96959B;
    font-size: 14px;
}