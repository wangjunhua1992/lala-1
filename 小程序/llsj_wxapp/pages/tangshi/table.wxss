page {
    background-color: #F5F5F5;
}

.content .tabs-list {
    position: relative;
    width: 100%;
    height: 45px;
    overflow-x: scroll;
    white-space: nowrap;
    background: #fff;
    color: #333;
}

.content .tabs-list::-webkit-scrollbar {
    display: none;
}

.content .tabs-list .tabs-item {
    display: inline-block;
    height: 100%;
    width: 25%;
    margin: 0px;
    line-height: 45px;
    text-align: center;
    position: relative;
    font-size: 14px;
    color: #333;
}

.content .tabs-list .tabs-item.active {
    color: #33aafc;
}

.content .tabs-list .tabs-item.active:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: .1rem solid #33aafc;
}

.content .content-padded {
    padding: 10px 6px 10px 17px;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.content .content-padded .table-item {
    width: 30%;
    height: 108px;
    background: #ccc;
    border-radius: 5px;
    margin-bottom: 10px;
    margin-right: 3%;
}

.content .content-padded .table-item.active {
    background: #ff2b4d;
}

.content .content-padded .table-item.blue {
    background: #31AAFB;
}

.content .content-padded .table-item .type {
    padding-top: 26px;
    text-align: center;
    color: #fff;
    font-size: 14px;
    opacity: .7;
}

.content .content-padded .table-item .status {
    padding-top: 6px;
    text-align: center;
    color: #fff;
    font-size: 16px;
    font-weight: bold;
}

.content .no-data {
    padding-top: 30%;
    text-align: center;
}

.content .no-data .bg {
    display: inline-block;
    width: 160px;
    height: 160px;
    background: url(http://mine/we7/addons/we7_wmall/template/mobile/manage/static/img/no_order.png) no-repeat 0 0;
    background-size: cover;
}

.content .no-data view {
    display: block;
    margin: 0;
    color: #999;
    font-size: 18px;
}