page {
    font-size: 14px;
    background-color: #f5f5f5;
}

.goods-post .tip {
    height: 40px;
    line-height: 40px;
    padding-left: 15px;
    background-color: #f5f5f5;
    color: #535353;
}

.goods-post .zan-panel {
    margin-top: 0;
}

.goods-post .zan-panel .zan-cell.goods-img {
    padding: 11px 15px;
}

.goods-post .zan-panel .zan-cell.goods-img .zan-field__title {
    align-self: flex-start;
}

.goods-post .zan-panel .zan-cell.goods-img image {
    width: 60px;
    height: 60px;
    font-size: 0px;
}

.goods-post .zan-panel.goods-setting .zan-cell {
    height: 48px;
    box-sizing: border-box;
}

.goods-post .zan-panel.goods-desc {
    padding: 11px 15px;
}

.goods-post .zan-panel.goods-desc textarea {
    width: 100%;
    height: 60px;
}

.goods-post .btn-group {
    padding: 15px;
}