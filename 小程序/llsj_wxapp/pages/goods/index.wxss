page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.page-goods {
    width: 100%;
    height: 100%;
}

.page-goods .wrapper {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    padding-bottom: 50px;
}

.page-goods .wrapper .tags-list {
    width: 24%;
    height: 100%;
    background-color: #f5f5f5;
}

.page-goods .wrapper .goods-list {
    width: 76%;
    height: 100%;
}

.page-goods .wrapper .tags-list .tag-item {
    width: 100%;
    box-sizing: border-box;
    padding: 20px 10px;
    line-height: 17px;
    color: #5A5A5A;
}

.page-goods .wrapper .tags-list .tag-item .tag-inner {
    text-align: center;
    overflow: hidden;
    display: -webkit-box;
    width: 100%;
    line-height: 17px;
    box-sizing: border-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.page-goods .wrapper .tags-list .tag-item.active {
    color: #000;
    background-color: #fff;
    border-left: 3px solid #33aafc;
}

.page-goods .wrapper .goods-list .category-title {
    padding: 5px 0 5px 10px;
    background-color: #f5f5f5;
    color: #5A5A5A;
    border-left: 3px solid #ccc;
}

.page-goods .wrapper .goods-list .goods-list-inner {
    padding: 0 10px;
}

.page-goods .wrapper .goods-list .goods-item {
    width: 100%;
    padding: 20px 0;
    line-height: 1;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .thumb {
    width: 60px;
    height: 60px;
    border-radius: 5px;
    overflow: hidden;
    position: relative;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .thumb image {
    width: 100%;
    height: 100%;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .thumb .label {
    position: absolute;
    z-index: 10;
    top: 0;
    left: 0;
    height: 15px;
    line-height: 15px;
    background-color: #FF2D4B;
    color: #fff;
    padding: 0 2px;
    font-size: 11px;
    text-align: left;
    border-radius: 5px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .thumb .status {
    position: absolute;
    z-index: 10;
    bottom: 0;
    left: 0;
    height: 15px;
    line-height: 15px;
    width: 100%;
    background-color: #999;
    color: #fff;
    font-size: 11px;
    text-align: center;
    border-radius: 0 0 5px 5px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .info-inner {
    width: 72%;
    height: 60px;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .goods-title {
    width: 100%;
    font-size: 15px;
    font-weight: bold;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .sailed {
    color: #5A5A5A;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .sailed text {
    display: inline-block;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .sailed .sail-total {
    padding-left: 5px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .sailed .sailed-tip {
    padding: 1px 3px;
    color: #33aafc;
    border: 1px solid #33aafc;
    border-radius: 2px;
    font-size: 11px;
    margin: 0 10px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .sailed .sail-limit {
    padding: 1px 3px;
    color: #535353;
    border: 1px solid #535353;
    border-radius: 2px;
    font-size: 11px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .price {
    display: flex;
    font-size: 12px;
    color: #ff2d4b;
    font-weight: bold;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .price .price-text {
    color: #33aafc;
    font-weight: bold;
    margin-right: 10px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .price .price-text text {
    font-size: 14px;
}

.page-goods .wrapper .goods-list .goods-item .goods-info .price .type-title text {
    font-size: 14px;
}

.page-goods .wrapper .goods-list .goods-item .btn-group {
    padding-top: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.page-goods .wrapper .goods-list .goods-item .btn-group .btn-item {
    padding: 5px 10px;
    color: #33aafc;
    border: 1px solid #33aafc;
    border-radius: 3px;
    margin-left: 10px;
}

.page-goods .wui-loadmore-tips {
    background-color: #fff;
}