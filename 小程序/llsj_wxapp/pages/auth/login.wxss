page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
}

.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    margin: 40px auto 0px;
    border: 1px solid #eee;
}

.avatar image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.plateform-title {
    text-align: center;
    font-size: 15px;
    margin: 10px 0 20px;
    color: #33aafc;
}

.input-group {
    width: 100%;
    padding: 0 40px;
    box-sizing: border-box;
}

.input-group .input {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #dadada;
    padding: 10px 0px;
    margin-bottom: 20px;
}

.input-group .input .right {
    width: 100%;
}

.input-group .input .right input {
    font-size: 16px;
}

.operation {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 0px 40px;
    color: #999;
}

.save-btn {
    padding: 0 40px;
    margin-top: 40px;
}

.save-btn button {
    height: 44px;
    line-height: 44px;
    font-size: 15px;
    background-color: #33aafc;
}