page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.content {
    overflow-x: hidden;
    overflow-y: auto;
}

.content .active-tab {
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
    width: 100%;
    height: 45px;
    color: #333;
    background-color: #fff;
}

.content .active-tab .tab-item {
    display: inline-block;
    height: 100%;
    width: 50%;
    margin: 0;
    line-height: 45px;
    text-align: center;
    font-size: 14px;
    position: relative;
}

.content .active-tab .tab-item.active {
    color: #33aafc;
}

.content .active-tab .tab-item.active:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2px solid #33aafc;
}

.content .main {
    padding-top: 45px;
    background-color: #FFF;
}

.content .main .activity-col {
    width: 100%;
    padding-top: 16px;
}

.content .main .activity-col .col-left {
    width: 20%;
    display: inline-block;
    text-align: center;
    float: left;
}

.content .main .activity-col .col-left text {
    display: inline-block;
    width: 52px;
    height: 28px;
    color: #fff;
    line-height: 28px;
    text-align: center;
    border-radius: 10px;
    margin-top: 2px;
    background-color: #ccc;
}

.content .main .activity-col .col-left .text-yellow {
    background-color: #FBA432;
}

.content .main .activity-col .col-left .text-green {
    background-color: #63DC49;
}

.content .main .activity-col .col-left .text-red {
    background-color: #FA4567;
}

.content .main .activity-col .col-left .text-gold {
    background-color: gold;
}

.content .main .activity-col .col-left .text-orange {
    background-color: orangered;
}

.content .main .activity-col .col-left .text-blue {
    background-color: #87cefa;
}

.content .main .activity-col .col-right {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 78%;
    float: left;
    padding-bottom: 16px;
}

.content .main .activity-col .col-right .content .top {
    display: block;
    margin: 0 0 8px;
    font-size: 18px;
    font-weight: 400;
}

.content .main .activity-col .col-right .content .body {
    margin: 0;
    font-size: 13px;
    color: #8C8C8C;
}

.content .main .activity-col .col-right .link {
    float: right;
    padding: 6px 8px;
    background-color: #33aafc;
    border-radius: 6px;
    color: #fff;
    font-size: 12px;
    height: 18px;
    white-space: nowrap;
}

.content .main .activity-col .col-right .add {
    background-color: #FF2D4B;
}