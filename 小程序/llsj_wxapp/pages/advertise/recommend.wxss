page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
}

.content {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 55px;
    overflow-x: hidden;
    overflow-y: auto;
}

.content .content-title {
    position: relative;
    margin: 14px 15px;
    overflow: hidden;
    font-size: 14px;
    line-height: 1;
    color: #6d6d72;
    text-overflow: ellipsis;
    text-transform: uppercase;
    white-space: nowrap;
}

.content .zan-panel {
    margin: 10px 0;
}

.content .zan-cell__bd text {
    padding-left: 3px;
    color: red;
}

.content .zan-cell__bd .amount {
    color: #333;
}

.content .zan-cell__ft .icon-check {
    color: #fff;
    background: #33aafc;
    position: relative;
    width: 22px;
    height: 22px;
    line-height: 24px;
    border-radius: 22px;
    font-size: 14px;
    text-align: center;
}

.content .zan-cell__ft .checked {
    width: 21px;
    height: 21px;
    border: 1px solid #c7c7cc;
    border-radius: 21px;
}

.page__bd {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    width: 100%;
    height: 54px;
    background-color: #fff;
    border-top: 1px solid #e7e7e7;
}

.page__bd .weui-btn {
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    background: #33aafc;
    margin: 0 15px;
    vertical-align: middle;
}

.page__bd .weui-btn.disabled {
    background-color: #ccc;
}