page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    background-color: #F5F5F5;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.buttons-tab {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 45px;
    display: flex;
    flex-wrap: nowrap;
    align-self: center;
    z-index: 100;
    background-color: #fff;
}

.buttons-tab .tabs {
    width: 100%;
    height: 43px;
    font-size: 15px;
    line-height: 43px;
    padding: 0 10px;
    text-align: center;
    text-decoration: none;
    text-overflow: ellipsis;
    white-space: nowrap;
    cursor: pointer;
    border-bottom: 2px solid transparent;
}

.buttons-tab .tabs.active {
    color: #33aafc;
    border-color: #33aafc;
}

.record-list {
    margin-top: 45px;
    width: 100%;
    height: 100%;
}

.record-list .record-item {
    padding: 6px 10px;
    background-color: #fff;
}

.record-list .record-item .record-name {
    position: relative;
    color: #3d4145;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
}

.record-list .record-item .record-name .price {
    font-weight: normal;
    font-size: 15px;
}

.record-list .record-item .record-time {
    position: relative;
    font-size: 12px;
    color: #aaa;
    display: flex;
    justify-content: space-between;
}

.no-data {
    padding-top: 30%;
    text-align: center;
}

.no-data image {
    display: inline-block;
    width: 160px;
    height: 160px;
}

.no-data view {
    margin: 0;
    color: #999;
    font-size: 18px;
}