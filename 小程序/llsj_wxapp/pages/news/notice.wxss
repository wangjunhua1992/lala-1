page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.content {
    overflow-x: hidden;
    overflow-y: auto;
}

.content .notice-box .notice-list {
    padding: 10px 0;
    background-color: #fff;
}

.content .notice-box .notice-list .left {
    float: left;
    width: 15%;
    text-align: right;
}

.content .notice-box .notice-list .left .news {
    display: inline-block;
    font-size: 12px;
    line-height: 1;
    color: #616161;
    background-color: #e0e0e0;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: 3px;
    padding: 6px 7px;
    margin-top: 4px;
}

.content .notice-box .notice-list .left .news.color-danger {
    background-color: #33aafc;
    color: #fff;
}

.content .notice-box .notice-list .right {
    float: left;
    width: 82%;
    margin-left: 2%;
}

.content .notice-box .notice-list .right .notice-title {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 16px;
    color: #333;
}

.content .notice-box .notice-list .right .time {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
    color: #333;
}

.content .no-data {
    padding-top: 30%;
    text-align: center;
}

.content .no-data .bg {
    display: inline-block;
    width: 160px;
    height: 160px;
    background: url(http://mine/we7/addons/we7_wmall/template/mobile/manage/static/img/no_order.png) no-repeat 0 0;
    background-size: cover;
}

.content .no-data view {
    display: block;
    margin: 0;
    color: #999;
    font-size: 18px;
}