page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    background-color: #F5F5F5;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.buttons-tab {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 45px;
    display: flex;
    flex-wrap: nowrap;
    align-self: center;
    z-index: 100;
    background-color: #fff;
}

.buttons-tab .tabs {
    width: 100%;
    height: 43px;
    font-size: 15px;
    line-height: 43px;
    padding: 0 10px;
    text-align: center;
    text-decoration: none;
    text-overflow: ellipsis;
    white-space: nowrap;
    cursor: pointer;
    border-bottom: 2px solid transparent;
}

.buttons-tab .tabs.active {
    color: #33aafc;
    border-color: #33aafc;
}

.content {
    padding-top: 45px;
}

.content .order {
    margin-top: 10px;
    background-color: #fff;
}

.content .order .order-header {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
}

.content .order .order-header .number {
    color: #3d4145;
    font-size: 16px;
    line-height: 1;
}

.content .order .order-content {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
}

.content .order .order-content .member-info {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
}

.content .order .order-content .member-info image {
    width: 35px;
    height: 35px;
    border: none;
    margin-right: 10px;
}

.content .order .order-content .price {
    text-align: right;
}

.content .order .order-footer {
    padding: 10px 15px;
    font-size: 12px;
    color: #A9A9A9;
}

.content .order .order-footer .order-number {
    width: 100%;
    overflow: hidden;
}

.content .order .order-footer .order-number view {
    float: left;
}

.content .order .order-footer .order-addtime {
    width: 100%;
    overflow: hidden;
}

.content .order .order-footer .order-addtime view {
    float: left;
}

.page-index .no-data {
    padding-top: 30%;
    text-align: center;
}

.page-index .no-data image {
    display: inline-block;
    width: 160px;
    height: 160px;
}

.page-index .no-data view {
    margin: 0;
    color: #999;
    font-size: 18px;
}