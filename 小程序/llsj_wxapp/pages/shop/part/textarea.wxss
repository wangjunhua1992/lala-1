page {
    background-color: #f5f5f5;
    font-size: 14px;
}

.page-textarea .tip {
    height: 40px;
    line-height: 40px;
    padding-left: 15px;
    background-color: #f5f5f5;
    color: #535353;
}

.page-textarea .zan-cell {
    height: 48px;
    box-sizing: border-box;
}

.page-textarea .zan-cell .zan-field__input {
    text-align: right;
}

.page-textarea .tip+.zan-panel {
    margin-top: 0;
}

.page-textarea .zan-panel.desc {
    padding: 11px 15px;
}

.page-textarea .zan-panel.desc textarea {
    width: 100%;
    height: 80px;
}

.page-textarea .time-picker {
    height: 48px;
    padding: 0 15px;
    color: #535353;
    margin-bottom: 10px;
}

.page-textarea .time-picker text {
    padding: 0 20px;
}

.page-textarea .time-picker .remove {
    color: #33aafc;
}

.page-textarea .zan-panel.sail-time .zan-cell {
    height: 48px;
    box-sizing: border-box;
    color: #33aafc;
}

.page-textarea .zan-panel.sail-time .zan-cell .icon {
    font-size: 20px;
    margin-right: 5px;
}

.page-textarea .zan-panel.shop-thumbs {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    padding: 5px;
}

.page-textarea .zan-panel.shop-thumbs .thumb {
    width: 33.33333333%;
    height: 100px;
    box-sizing: border-box;
    padding: 5px;
    font-size: 0;
    position: relative;
}

.page-textarea .zan-panel.shop-thumbs .thumb image {
    width: 100%;
    height: 100%;
    border-radius: 4px;
}

.page-textarea .zan-panel.shop-thumbs .thumb .img-remove {
    width: 18px;
    height: 18px;
    line-height: 18px;
    border-radius: 100%;
    position: absolute;
    right: 0px;
    top: 0px;
    text-align: center;
    background-color: #33aafc;
    color: #fff;
    font-size: 14px;
}