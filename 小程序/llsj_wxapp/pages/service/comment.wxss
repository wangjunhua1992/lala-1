page {
    background: #F5F5F5;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.content .comment-tab {
    position: fixed;
    z-index: 9;
    top: 0;
    left: 0;
    width: 100%;
    height: 45px;
    color: #333;
    background-color: #fff;
}

.content .comment-tab .comment-item {
    display: inline-block;
    height: 100%;
    width: 25%;
    margin: 0;
    line-height: 45px;
    text-align: center;
    font-size: 14px;
    position: relative;
}

.content .comment-tab .comment-item.active {
    color: #33aafc;
}

.content .comment-tab .comment-item.active:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2px solid #33aafc;
}

.content .comment-list {
    background-color: #fff;
    box-flex: 1;
    -ms-flex: 1 0 auto;
    margin-top: 45px;
}

.content .comment-list .comment-item {
    padding: 15px 15px 12px;
}

.content .comment-list .comment-item .comment-left {
    float: left;
    width: 15%;
    display: inline-block;
}

.content .comment-list .comment-item .comment-left image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.content .comment-list .comment-item .comment-right {
    float: left;
    width: 85%;
    display: inline-block;
}

.content .comment-list .comment-item .comment-right .comment-title {
    line-height: 15px;
}

.content .comment-list .comment-item .comment-right .comment-title .comment-name {
    color: #2f2f2f;
    font-size: 16px;
    display: inline-block;
}

.content .comment-list .comment-item .comment-right .comment-title .comment-time {
    font-size: 12px;
    color: #898989;
    float: right;
    display: inline-block;
}

.content .comment-list .comment-item .comment-right .comment-stars {
    margin-top: 6px;
    margin-bottom: 5px;
}

.content .comment-list .comment-item .comment-right .comment-stars .store-stars {
    display: inline-block;
    background: url(http://cos.lalawaimai.com/we7_wmall/wxapp/newstars.png) no-repeat;
    background-size: cover;
    width: 10px;
    height: 10px;
    float: left;
    margin-right: 4px;
    background-position: 0 0;
}

.content .comment-list .comment-item .comment-right .comment-stars .store-stars.stars-half {
    background-position: -13px 0;
}

.content .comment-list .comment-item .comment-right .comment-stars .store-stars.stars-gray {
    background-position: -27px 0!important;
}

.content .comment-list .comment-item .comment-right .comment-audit {
    float: right;
    font-size: 12px;
}

.content .comment-list .comment-item .comment-right .comment-audit.color-danger {
    color: #f6383a;
}

.content .comment-list .comment-item .comment-right .comment-audit.color-success {
    color: #4cd964;
}

.content .comment-list .comment-item .comment-right .comment-audit.color-primary {
    color: #0894ec;
}

.content .comment-list .comment-item .comment-right .comment-info {
    font-size: 14px;
    margin: 6px 0;
}

.content .comment-list .comment-item .comment-right .comment-bottom {
    margin: 4px 0;
    font-size: 12px;
}

.content .comment-list .comment-item .comment-right .comment-bottom .text {
    color: #576B95;
    display: inline-block;
    margin-left: 5px;
}

.content .comment-list .comment-item .comment-right .comment-bottom .icon {
    width: 11px;
    height: 11px;
    margin-right: 5px;
    background: url(//xs01.meituan.net/waimai_i/img/sprite/favor.bb7dca4b.png) no-repeat;
    background-size: contain;
    display: inline-block;
}

.content .comment-list .comment-item .comment-images-containter {
    box-sizing: border-box;
    padding: 5px;
    margin-left: -10px;
    margin-right: -10px;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
}

.content .comment-list .comment-item .comment-images-containter .comment-images-item {
    width: 25%;
    box-sizing: border-box;
    padding: 5px;
    font-size: 0px;
}

.content .comment-list .comment-item .comment-images-containter .comment-images-item image {
    width: 100%;
    height: 60px;
    border-radius: 4px;
}

.content .comment-list .comment-item .comment-right .replay {
    font-size: 14px;
    color: #898989;
    padding: 10px;
    background: #F4F4F4;
}

.content .comment-list .comment-item .comment-right .button {
    padding-top: 8px;
}

.content .comment-list .comment-item .comment-right .button .button-reply {
    margin-left: 12px;
    float: right;
    text-align: center;
    padding: 4px 6px;
    font-size: 12px;
    color: #33aafc;
    border: 1px solid #33aafc;
    border-radius: 3px;
}

.content .comment-list .wui-loadmore-tips {
    background-color: #fff;
}

.content .no-data {
    padding-top: 50%;
    text-align: center;
}

.content .no-data image {
    width: 160px;
}

.content .no-data .tip {
    font-size: 18px;
    color: #999;
}

.page-comment .wui-dialog-reply .wui-dialog-container {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background-color: #f5f5f5;
}

.page-comment .wui-dialog-reply .wui-dialog-container .tip {
    height: 40px;
    line-height: 40px;
    padding-left: 15px;
    background-color: #f5f5f5;
    color: #535353;
    font-size: 14px;
}

.page-comment .wui-dialog-reply .wui-dialog-container .tip~.zan-panel {
    margin-top: 0;
}

.page-comment .wui-dialog-reply .wui-dialog-container .tip~.zan-panel.desc {
    margin-top: 0;
    padding: 11px 15px;
    box-sizing: border-box;
    font-size: 14px;
}

.page-comment .wui-dialog-reply .wui-dialog-container .zan-panel textarea {
    width: 100%;
    height: 80px;
}

.page-comment .wui-dialog-reply .zan-cell_title {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;
}

.page-comment .wui-dialog-reply .zan-cell_title .box-icon {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 1rpx solid #c7c7cc;
    text-align: center;
    line-height: 16px;
    color: #fff;
    margin-right: 10px;
}

.page-comment .wui-dialog-reply .zan-cell_title .box-icon.active {
    border-color: #33aafc;
    background-color: #33aafc;
}

.page-comment .wui-dialog-reply button {
    margin: 15px;
}

.page-comment .wui-dialog-reply button[type=default] {
    border: 1rpx solid #ddd;
}