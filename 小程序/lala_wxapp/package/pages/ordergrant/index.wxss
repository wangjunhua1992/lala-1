page {
    background: #f4f4f4;
}

.page-index .banner .banner-image {
    position: absolute;
    width: 100%;
    height: 130px;
    z-index: -10;
}

.page-index .banner .banner-avtar {
    padding-top: 10px;
    text-align: center;
}

.page-index .banner .banner-avtar .userphoto {
    width: 61px;
    height: 61px;
    border-radius: 100%;
}

.page-index .banner .detal {
    position: absolute;
    height: 25px;
    line-height: 25px;
    width: 60px;
    color: #fff;
    font-size: 12px;
    text-align: center;
    background: rgba(255,255,255,0.2);
    border-radius: 10px;
    right: 10px;
    top: 10px;
}

.page-index .banner .open-agreement {
    position: absolute;
    height: 25px;
    line-height: 25px;
    width: 60px;
    color: #fff;
    font-size: 12px;
    text-align: center;
    background: rgba(255,255,255,0.2);
    border-radius: 10px;
    left: 10px;
    top: 10px;
}

.page-index .banner .banner-row .titles {
    color: #fff;
    font-size: 14px;
}

.page-index .banner .banner-row .col-33 {
    text-align: center;
}

.page-index .banner .banner-row .col-33 .days {
    color: #fff;
    font-size: 18px;
}

.page-index .banner .banner-row .username {
    position: relative;
    top: -28px;
}

.page-index .calendar {
    background: #fff;
    margin: 10px 10px;
    overflow: hidden;
}

.page-index .calendar .week .icon {
    position: relative;
    top: -7px;
    left: -5px;
    color: #FF2D4B;
}

.page-index .calendar .titles {
    height: 40px;
    padding: 0 10px;
    line-height: 40px;
    font-size: 17px;
    background: #fff;
    color: #ff2d4b;
    border-bottom: 1px solid #f2f2f2;
}

.page-index .calendar .titles .icon {
    font-size: 17px;
    margin-right: 5px;
}

.page-index .calendar .calendar-inner {
    padding-top: 10px;
    background: #fff;
    margin: 0px 10px;
    padding-bottom: 10px;
}

.page-index .calendar .calendar-inner .week {
    border-top: 1px solid #f4f4f4;
}

.page-index .calendar .calendar-inner .week:first-child {
    border: 0px;
}

.clearfix:after .clearfix:before {
    display: table;
    content: " ";
}

.page-index .calendar .calendar-inner .week .day {
    width: 14.28%;
    height: 62px;
    color: #777;
    font-size: 16px;
    position: relative;
    overflow: hidden;
}

.page-index .calendar .calendar-inner .week .day.today::before {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    content: "";
    border: 1px solid #ff2d4b;
}

.page-index .calendar .calendar-inner .week:last-child {
    border-bottom: 0px;
}

.page-index .calendar .calendar-inner .week .pull-left {
    float: left;
    border-left: 1px solid #f4f4f4;
    box-sizing: border-box;
}

.page-index .calendar .calendar-inner .day:nth-child(7n+1) {
    border: 0;
}

.page-index .calendar .calendar-inner .week .day .num {
    font-size: 18px;
    position: relative;
    height: 26px;
    padding-left: 10px;
    margin: 0;
}

.page-index .calendar .calendar-inner .week .day .signed {
    position: absolute;
    top: 0px;
    left: 50%;
    height: 17px;
    width: 17px;
    line-height: 17px;
    color: #ff2d4b;
    font-size: 24px;
}

.page-index .calendar .calendar-inner .week .day .grant {
    margin: 0;
    height: 17px;
    font-size: 13px;
    line-height: 17px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    align-items: center;
}

.page-index .calendar .calendar-inner .week .day .special {
    color: #fff;
    margin: 0;
    height: 17px;
    font-size: 13px;
    line-height: 17px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    position: absolute;
    bottom: 0;
    width: 100%;
}

.page-index .reward-container {
    margin-top: 10px;
    overflow: hidden;
    position: relative;
}

.page-index .reward-container .titles {
    height: 35px;
    line-height: 25px;
    color: #888;
    font-size: 15px;
    padding: 0 10px;
}

.page-index .reward-container .titles .icon {
    font-size: 16px;
    position: relative;
    top: -4px;
    padding-right: 5px;
}

.page-index .reward-container .titles .text {
    display: inline-block;
}

.page-index .reward-container .titles .pull-right {
    display: inline-block;
    padding-right: 5px;
    float: right;
    font-size: 14px;
}

.page-index .reward-container .reward-inner {
    height: auto;
    overflow: hidden;
    position: relative;
}

.page-index .reward-container .reward-inner .award {
    height: 126px;
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
}

.page-index .reward-container .reward-inner::before {
    position: absolute;
    top: 55px;
    left: 0;
    right: 0;
    content: "";
    height: 5px;
    background: #fff;
}

.award .award-list {
    height: 115px;
    width: auto;
    display: inline-flex;
}

.award .award-list .item {
    height: 110px;
    width: 79px;
    overflow: hidden;
    position: relative;
}

.award .award-list .item .grant {
    color: #666;
    font-size: 12px;
    height: 30px;
    width: 57px;
    padding-top: 4px;
    line-height: 13px;
    text-align: center;
    margin: auto;
    background: #fff;
    border-radius: 2px;
    position: relative;
}

.award .award-list .item .grant::before {
    content: "";
    position: absolute;
    bottom: -3px;
    left: 50%;
    height: 6px;
    width: 6px;
    margin-left: -3px;
    background: #fff;
    transform: rotate(45deg);
}

.award .award-list .item .circle {
    height: 22px;
    width: 22px;
    background: #fff;
    margin: 6px auto 0;
    border-radius: 30px;
    position: relative;
    color: #fff;
    font-size: 22px;
    font-weight: bold;
    line-height: 19px;
    text-align: center;
}

.award .award-list .item .circle.active {
    background: #ff2d4b;
}

.award .award-list .item .days {
    color: #888;
    font-size: 13px;
    text-align: center;
}

.award .award-list .item .text {
    font-size: 13px;
    text-align: center;
    width: 50px;
    border: 1px solid #ccc;
    margin: auto;
    border-radius: 2px;
    line-height: 22px;
    color: #999;
}