.page-index {
    background: #FFF;
}

.page-index .card-img {
    padding: 10px 20px 10px 20px;
}

.page-index .card-image {
    margin: auto;
    width: 100%;
    border: none;
    max-width: 100%;
    max-height: 210px;
}

.page-index .card-box {
    padding-top: 20px;
    overflow: hidden;
}

.page-index .card-box .left {
    float: left;
    width: 50%;
    height: 86px;
    text-align: center;
}

.page-index .card-box .right {
    float: left;
    width: 50%;
    height: 86px;
    text-align: center;
}

.page-index .card-box .box-img {
    max-width: 45px;
    height: 46px;
}

.page-index .card-box .text {
    color: #808080;
    font-size: 15px;
}

.page-index .card-agreement {
    width: 100%;
    padding: 10px 0px;
    text-align: center;
}

.page-index .card-agreement .card-open {
    font-size: 12px;
    color: #aaa;
}

.page-index .card-agreement .card-open .icon {
    font-size: 12px;
    position: relative;
    top: -5px;
    right: 2px;
}

.page-index .card-button {
    padding: 18px 0px;
    width: 100%;
    height: 50px;
    text-align: center;
}

.page-index .pop-title {
    background: #F7BF46;
    color: #fff;
}

.page-index .pop-container .text {
    padding: 10px;
}

.page-index .header {
    width: 100%;
    height: 49px;
    display: flex;
    box-sizing: border-box;
    padding: 0 20px;
    margin-top: 20px;
}

.page-index .header .img {
    width: 49px;
    height: 49px;
    border-radius: 50%;
    margin-right: 10px;
}

.page-index .cir {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.page-index .name {
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    width: auto;
    height: 100%;
}

.page-index .name .top {
    display: flex;
}

.page-index .name1 {
    color: #000;
    font-size: 16px;
}

.page-index .tex {
    color: #aaa;
    font-size: 14px;
}

.page-index .ninfo {
    width: 31px;
    height: 20px;
    border-radius: 5px;
    margin-left: 5px;
    margin-top: 5px;
}

.page-index .card {
    width: 90%;
    height: 210px;
    margin: 20px auto 0;
    border-radius: 5px;
    position: relative;
    top: 0;
    left: 0;
}

.page-index .cardimg {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

.page-index .word {
    width: 100%;
    height: auto;
    position: absolute;
    bottom: 5px;
    left: 10px;
    color: #fff;
    font-size: 14px;
}

.page-index .ninfo image {
    width: 100%;
    height: 100%;
    display: block;
}

.page-index .cardimg image {
    width: 100%;
    height: 100%;
    display: block;
}

.page-index .pay {
    width: 100%;
    height: 44px;
    background: #ff2d4b;
    text-align: center;
    line-height: 44px;
    color: #fff;
    font-size: 16px;
    position: fixed;
    bottom: 0;
    left: 0;
}