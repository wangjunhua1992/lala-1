page {
    background-color: #F5F5F5;
    font-size: 14px;
    line-height: 1;
}

.page-record .wrapper-list {
    display: flex;
    width: 100%;
    height: 40px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
    background-color: #fff;
}

.page-record .wrapper-list .wrapper-item {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.page-record .wrapper-list .wrapper-item .item {
    padding: 7px 0 8px 0;
    border-bottom: 2px solid transparent;
    color: #666;
    font-size: 14px;
    line-height: 16px;
    opacity: .7;
}

.page-record .wrapper-list .wrapper-item .item.active {
    border-color: #333;
    font-weight: 700;
    opacity: 1;
}

.page-record .record-list {
    padding-top: 40px;
}

.page-record .record-list .record-tips {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    background-image: linear-gradient(90deg,#f7ecbd,#e5d693);
    color: #735b27;
    font-size: 12px;
}

.page-record .record-list .record-tips image {
    width: 14px;
    height: 14px;
    margin-right: 10px;
}

.page-record .record-list .record-item {
    background-color: #fff;
}

.page-record .record-list .record-item .record-info {
    padding: 10px 15px 10px 0;
    margin-left: 10px;
}

.page-record .record-list .record-item .record-info .mission {
    padding-top: 5px;
}

.page-record .record-list .record-item .record-info .record-time {
    font-size: 12px;
    color: #999;
    padding-top: 5px;
}