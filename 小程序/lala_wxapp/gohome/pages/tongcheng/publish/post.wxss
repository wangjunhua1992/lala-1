@import "../../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 14px;
    line-height: 1;
}

.publish-post textarea {
    box-sizing: border-box;
    width: 100%;
    height: 110px;
}

.publish-post .pic-box {
    display: flex;
    flex-flow: wrap;
    align-items: center;
    justify-content: flex-start;
    position: relative;
    padding: 7.5px;
    box-sizing: border-box;
}

.publish-post .pic-box .col-25 {
    height: 65px;
    padding: 7.5px;
    box-sizing: border-box;
}

.publish-post .pic-box .pic-icon {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ececec;
    border-radius: 3px;
}

.publish-post .pic-box .pic-icon .icon {
    font-size: 26px;
}

.publish-post .pic-box .pic {
    width: 100%;
    height: 100%;
    position: relative;
}

.publish-post .pic-box .pic image {
    width: 100%;
    height: 100%;
    border-radius: 3px;
}

.publish-post .pic-box .pic view {
    position: absolute;
    right: -5px;
    top: -5px;
    color: #fff;
    background-color: #FA553E;
    width: 18px;
    height: 18px;
    line-height: 15px;
    text-align: center;
    border-radius: 100%;
}

.publish-post .tags {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 12px;
}

.publish-post .tags .tag-item {
    font-size: 12px;
    border: 1px solid #ccc;
    padding: 3px 5px;
    border-radius: 3px;
    margin: 3px;
}

.publish-post .tags .tag-item.active {
    color: #ff2d4b;
    border-color: #ff2d4b;
}

.publish-post .field {
    height: 44px;
    box-sizing: border-box;
    padding: 10px 15px 10px 0;
}

.publish-post .field .icon-check {
    width: 19px;
    height: 19px;
    border-radius: 50%;
    border: 1px solid #e8e8e8;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 16px;
}

.publish-post .field .icon-check.checked {
    background-color: #ff2d4b;
    border-color: #ff2d4b;
}