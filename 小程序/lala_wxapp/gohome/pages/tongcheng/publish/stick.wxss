page {
    background-color: #f5f5f5;
    font-size: 14px;
    line-height: 1;
}

.publish-post .field {
    height: 44px;
    box-sizing: border-box;
    padding: 10px 15px 10px 0;
}

.publish-post .field .icon-check {
    width: 19px;
    height: 19px;
    border-radius: 50%;
    border: 1px solid #e8e8e8;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 16px;
}

.publish-post .field .icon-check.checked {
    background-color: #ff2d4b;
    border-color: #ff2d4b;
}