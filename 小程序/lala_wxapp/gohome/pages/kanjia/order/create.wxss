@import "../../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 14px;
    line-height: 1;
}

.kanjia-order-create {
    padding: 10px 10px 60px;
}

.kanjia-order-create .username-mobile>view {
    width: 49.9%;
}

.kanjia-order-create .order-info {
    background-color: #fff;
    padding: 15px;
    border-radius: 3px;
    font-size: 14px;
}

.kanjia-order-create .order-info .goods .thumb {
    width: 60px;
    height: 60px;
    border-radius: 3px;
    overflow: hidden;
    font-size: 0px;
}

.kanjia-order-create .order-info .goods .info {
    height: 60px;
    font-size: 14px;
    flex: 1;
    padding-left: 10px;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: space-between;
}

.kanjia-order-create .order-info .total-price {
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
}

.kanjia-order-create .note {
    margin-top: 10px;
    padding: 15px;
    background-color: #fff;
    border-radius: 3px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.kanjia-order-create .note textarea {
    width: 80%;
    height: 80px;
    line-height: 1.5;
    padding: 10px;
    background-color: #f5f5f5;
    border-radius: 3px;
}

.order-btn-field {
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
}

.order-btn-field .order-submit {
    float: right;
    width: 110px;
    height: 50px;
    font-size: 16px;
    color: #fff;
    background-color: #ff2d4b;
    text-align: center;
    line-height: 50px;
    border-radius: 0px;
}

.order-btn-field .order-submit.disabled {
    background-color: #ccc;
}

.order-btn-field .order-total-field {
    float: right;
    margin-right: 10px;
    height: 50px;
    line-height: 50px;
    color: #2f2f2f;
    font-size: 14px;
}

.order-btn-field .order-total-field .order-total {
    display: inline-block;
    color: #F95339;
    font-size: 21px;
    vertical-align: middle;
    margin-left: 5px;
}

.order-btn-field .order-benefit {
    display: inline-block;
    height: 50px;
    margin-left: 15px;
    font-size: 14px;
    line-height: 50px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.order-btn-field .order-benefit view {
    display: inline-block;
    margin-left: 5px;
}