@import "../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 14px;
}

.kanjia-record {
    line-height: 1;
}

.kanjia-record .record-item {
    margin: 10px;
    padding: 10px;
    background-color: #fff;
    border-radius: 5px;
}

.kanjia-record .record-item .record-img {
    width: 80px;
    height: 80px;
    border: none;
}

.kanjia-record .record-item .record-img image {
    width: 100%;
    height: 100%;
}

.kanjia-record .record-item .record-info {
    width: 72%;
    padding-left: 10px;
    height: 80px;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: space-between;
}

.kanjia-record .record-item .record-info .goods-title {
    width: 100%;
    color: #333;
    font-size: 15px;
}

.kanjia-record .record-item .record-info .progress {
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: flex-end;
    justify-content: space-between;
    font-size: 14px;
    margin-top: 10px;
}

.kanjia-record .record-item .record-info .progress .progress-inner {
    width: 70%;
    height: 10px;
    position: relative;
    flex: 1;
}

.kanjia-record .record-item .record-info .progress .progress-inner .now-price {
    position: absolute;
    bottom: 15px;
    color: #ff2d4b;
    font-size: 12px;
    transform: translateX(-50%);
    text-align: center;
}

.kanjia-record .record-item .record-info .progress .progress-inner .bar {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 10px;
    background-color: #FED4D5;
    border-radius: 20px;
    overflow: hidden;
}

.kanjia-record .record-item .record-info .progress .progress-inner .bar .bar-inner {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    background: linear-gradient(to right,#FD6131,#FE0000);
    width: 20%;
}

.kanjia-record .record-item .record-info .record-btn {
    color: #fff;
    font-size: 14px;
    padding: 8px 10px;
    border-radius: 3px;
}

.kanjia-record .record-item .record-info .record-btn.btn-detail {
    background: linear-gradient(to right,#FC6030,#FF0101);
}