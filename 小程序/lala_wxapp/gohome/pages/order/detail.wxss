@import "../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 14px;
}

.gohome-orderdetail {
    line-height: 1;
}

.gohome-orderdetail .content-scroll {
    padding-bottom: 50px;
}

.gohome-orderdetail .content-scroll .goods-info {
    border-radius: 3px;
}

.gohome-orderdetail .content-scroll .goods-info .thumb {
    width: 50px;
    height: 50px;
    border-radius: 3px;
    overflow: hidden;
}

.gohome-orderdetail .content-scroll .goods-info .thumb image {
    width: 100%;
    height: 100%;
}

.gohome-orderdetail .content-scroll .goods-info .info {
    height: 50px;
    font-size: 14px;
    flex: 1;
    padding-left: 10px;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: space-between;
}

.gohome-orderdetail .content-scroll .text-right {
    text-align: right;
}

.gohome-orderdetail .content-scroll .order-info {
    overflow: hidden;
}

.gohome-orderdetail .content-scroll .order-info .info-left {
    float: left;
    width: 25%;
    box-sizing: border-box;
}

.gohome-orderdetail .content-scroll .order-info .info-right {
    float: left;
    width: 75%;
    box-sizing: border-box;
}

.gohome-orderdetail .fix-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50px;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 15px;
}

.gohome-orderdetail .fix-bottom view {
    color: #ff2d4b;
    border: 1px solid #ff2d4b;
    font-size: 14px;
    padding: 7px 10px;
    border-radius: 50px;
    margin-left: 10px;
}

.gohome-orderdetail .code-qrcode {
    margin-top: 10px;
    background-color: #fff;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
}