@import "../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 14px;
    line-height: 1;
}

.seckill-category .goods-list {
    padding: 7.5px;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    background-color: #fff;
}

.seckill-category .goods-list .activity-item {
    width: 50%;
}

.seckill-category .goods-list .activity-item .item-inner {
    padding: 7.5px;
}

.seckill-category .goods-list .activity-item .item-inner .thumb {
    width: 100%;
    height: 162px;
    border-radius: 3px;
    overflow: hidden;
    position: relative;
}

.seckill-category .goods-list .activity-item .item-inner .thumb image {
    width: 100%;
    height: 100%;
}

.seckill-category .goods-list .activity-item .item-inner .end-bg {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
}

.seckill-category .goods-list .activity-item .item-inner .end-bg image {
    width: 130px;
    height: 97px;
}

.seckill-category .goods-list .activity-item .item-inner .goods-title {
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.2;
    margin: 8px 0;
    height: 33px;
}

.seckill-category .goods-list .activity-item .item-inner .discount {
    position: relative;
    padding: 2px 3px 2px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    background-color: #FED4D5;
    color: #C51C33;
    margin-left: 10px;
}

.seckill-category .goods-list .activity-item .item-inner .discount:before {
    content: "";
    display: block;
    border-width: 7px;
    position: absolute;
    left: -7px;
    transform: translateX(-50%);
    border-style: solid dashed dashed;
    border-color: transparent #FED4D5 transparent transparent;
    font-size: 0;
    line-height: 0;
    z-index: 10;
}

.seckill-category .goods-list .activity-item .item-inner .bar {
    width: 49%;
    height: 14px;
    border-radius: 20px;
    background-color: #FED4D5;
    position: relative;
    overflow: hidden;
}

.seckill-category .goods-list .activity-item .item-inner .bar.bar-end {
    background-color: #959595;
}

.seckill-category .goods-list .activity-item .item-inner .bar .bar-inner {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    bottom: 0;
    border-radius: 20px;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.seckill-category .goods-list .activity-item .item-inner .bar .bar-text {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    bottom: 0;
    padding-left: 10px;
    display: flex;
    align-items: center;
    font-size: 10px;
    color: #fff;
    min-width: 80px;
}

.seckill-category .goods-list .activity-item .item-inner .seckill-btn {
    color: #fff;
    font-size: 14px;
    padding: 8px 10px;
    border-radius: 3px;
}

.seckill-category .goods-list .activity-item .item-inner .seckill-btn.btn-detail {
    background: linear-gradient(to right,#FC6030,#FF0101);
}

.seckill-category .goods-list .activity-item .item-inner .seckill-btn.btn-end {
    background-color: #959595;
}