page {
    background-color: #f5f5f5;
    font-size: 15px;
}

.page-pintuan-share .goods-info {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 15px;
    margin: 15px;
    color: #333;
    background-color: #fff;
}

.page-pintuan-share .goods-info .thumb {
    position: relative;
    width: 100px;
    height: 100px;
    border-radius: 2px;
    overflow: hidden;
}

.page-pintuan-share .goods-info .thumb image {
    width: 100%;
    height: 100%;
}

.page-pintuan-share .goods-info .thumb .mark {
    position: absolute;
    width: 44px;
    height: 28px;
    top: 0;
    left: 10px;
    padding-top: 4px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% 100%;
    color: #fff;
    font-size: 12px;
    text-align: center;
}

.page-pintuan-share .goods-info .info {
    flex: 1;
    padding-left: 10px;
    height: 100px;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: space-between;
}

.page-pintuan-share .goods-info .info .info-store {
    font-size: 15px;
    width: 100%;
}

.page-pintuan-share .goods-info .info .info-price {
    width: 100%;
}

.page-pintuan-share .goods-info .info .info-price .price {
    display: flex;
    align-items: center;
}

.page-pintuan-share .goods-info .info .info-price .price .now-price {
    font-size: 15px;
    margin-right: 5px;
    color: #ff2d4b;
}

.page-pintuan-share .goods-info .info .info-price .price .old-price {
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
}

.page-pintuan-share .goods-info .info .info-price .price .discount {
    position: relative;
    padding: 3px 5px 3px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    line-height: 12px;
    background-color: #FED4D5;
    color: #C51C33;
    margin-left: 15px;
}

.page-pintuan-share .goods-info .info .info-price .price .discount:before {
    content: "";
    display: block;
    border-width: 8px;
    position: absolute;
    left: -8px;
    transform: translateX(-50%);
    border-style: solid dashed dashed;
    border-color: transparent #FED4D5 transparent transparent;
    font-size: 0;
    line-height: 0;
    z-index: 10;
}

.page-pintuan-share .goods-info .info .info-price .progress-bar {
    width: 150px;
    height: 14px;
    border-radius: 20px;
    background-color: #FED4D5;
    position: relative;
    margin-top: 5px;
}

.page-pintuan-share .goods-info .info .info-price .progress-bar.bar-end {
    background-color: #959595;
}

.page-pintuan-share .goods-info .info .info-price .progress-bar .bar-inner {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    bottom: 0;
    border-radius: 20px;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.page-pintuan-share .goods-info .info .info-price .progress-bar .bar-text {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    bottom: 0;
    padding-left: 10px;
    display: flex;
    align-items: center;
    font-size: 10px;
    color: #fff;
    min-width: 80px;
}

.page-pintuan-share .share-info {
    padding: 15px;
    margin: 15px;
    color: #333;
    background-color: #fff;
}

.page-pintuan-share .share-info .step {
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 10px;
}

.page-pintuan-share .share-info .step .step-item {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    width: 33.33%;
    position: relative;
}

.page-pintuan-share .share-info .step .step-item:before {
    position: absolute;
    content: '';
    top: 10px;
    left: 50%;
    width: 100%;
    border: 1px solid #D6D6D6;
}

.page-pintuan-share .share-info .step .step-item.active:before {
    border-color: #ff2d4b;
}

.page-pintuan-share .share-info .step .step-item:last-child:before {
    display: none;
}

.page-pintuan-share .share-info .step .step-number {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    border: 1px solid #D6D6D6;
    padding: 1px;
    margin-bottom: 10px;
    position: relative;
    background-color: #fff;
}

.page-pintuan-share .share-info .step .step-number.active {
    border-color: #ff2d4b;
}

.page-pintuan-share .share-info .step .step-number.active .step-number-inner {
    background-color: #ff2d4b;
}

.page-pintuan-share .share-info .step .step-number .step-number-inner {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #d6d6d6;
    color: #fff;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
}

.page-pintuan-share .share-info .step .step-title {
    color: #d6d6d6;
}

.page-pintuan-share .share-info .step .step-title.active {
    color: #ff2d4b;
}

.page-pintuan-share .share-info .take-info {
    padding: 10px 0;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    font-size: 14px;
}

.page-pintuan-share .share-info .take-info .join-num {
    font-size: 18px;
    margin: 0 5px;
    color: #ff2d4b;
}

.page-pintuan-share .share-info .take-info .down-time {
    display: flex;
    align-items: center;
    margin-top: 10px;
}

.page-pintuan-share .share-info .take-info .down-time .down-time-text {
    margin-right: 5px;
    color: #999;
}

.page-pintuan-share .share-info .take-info .down-time .timer {
    display: flex;
    align-items: center;
    color: #999;
}

.page-pintuan-share .share-info .take-info .down-time .timer text {
    background-color: #ff2d4b;
    color: #fff;
    font-size: 12px;
    padding: 3px 3px;
    border-radius: 3px;
    margin: 0 3px;
}

.page-pintuan-share .share-info .take-info .take-info-status {
    display: flex;
    align-items: center;
}

.page-pintuan-share .share-info .take-info .success-star {
    width: 50px;
    height: 41px;
    margin-right: 10px;
}

.page-pintuan-share .share-info .take-info .success-roll {
    font-size: 16px;
    color: #ff2d4b;
}

.page-pintuan-share .share-info .take-info .avatars {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 10px;
}

.page-pintuan-share .share-info .take-info .avatars .avatar-item {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    font-size: 0px;
    border: 2px solid #ff2d4b;
    margin: 0 5px;
    position: relative;
}

.page-pintuan-share .share-info .take-info .avatars .avatar-item image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.page-pintuan-share .share-info .take-info .avatars .avatar-item .mark {
    position: absolute;
    z-index: 1;
    left: 50%;
    bottom: -10px;
    font-size: 12px;
    background-color: #ff2d4b;
    transform: translateX(-50%);
    color: #fff;
    width: 34px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    border-radius: 50px;
}

.page-pintuan-share .share-info .take-info .avatars .avatar-item.empty {
    width: 60px;
    height: 60px;
    border: 2px dashed #ff2d4b;
    background-color: #FEDEE3;
    font-size: 40px;
    text-align: center;
    line-height: 58px;
    color: #ff2d4b;
}

.page-pintuan-share .share-info .take-info .btn-invite {
    width: 80%;
    padding: 15px 0;
    color: #fff;
    border-radius: 100px;
    text-align: center;
    font-size: 16px;
    line-height: 16px;
    margin-top: 15px;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.page-pintuan-share .share-info .take-info .btn-group {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    margin-top: 15px;
    width: 100%;
    padding: 0 15px;
}

.page-pintuan-share .share-info .take-info .btn-group .btn-item {
    width: 45%;
    padding: 10px 0;
    color: #fff;
    border-radius: 100px;
    text-align: center;
    font-size: 16px;
    line-height: 16px;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.page-pintuan-share .share-info .take-info .btn-group .btn-item.new {
    background: linear-gradient(to right,#FFBC2D,#FF9B2C);
}

.page-pintuan-share .share-info .explain {
    font-size: 12px;
    margin-top: 15px;
    color: #999;
}

.page-pintuan-share .tips {
    padding: 0 15px;
    color: #999;
    font-size: 14px;
    line-height: 14px;
}

.page-pintuan-share .activity-list {
    padding: 7.5px;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
}

.page-pintuan-share .activity-list .activity-item {
    width: 50%;
}

.page-pintuan-share .activity-list .activity-item .item-inner {
    color: #333;
    padding: 7.5px;
}

.page-pintuan-share .activity-list .activity-item .item-inner .thumb {
    width: 100%;
    height: 162px;
    font-size: 0px;
    border-radius: 3px;
    overflow: hidden;
    position: relative;
}

.page-pintuan-share .activity-list .activity-item .item-inner .thumb .mark {
    position: absolute;
    width: 44px;
    height: 28px;
    top: 0;
    left: 10px;
    padding-top: 4px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% 100%;
    color: #fff;
    font-size: 12px;
    text-align: center;
}

.page-pintuan-share .activity-list .activity-item .item-inner .thumb image {
    width: 100%;
    height: 100%;
}

.page-pintuan-share .activity-list .activity-item .item-inner .goods-title {
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.2;
    padding: 8px 10px;
    height: 33px;
    background-color: #fff;
}

.page-pintuan-share .activity-list .activity-item .item-inner .goods-price {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 0 10px 10px;
    background-color: #fff;
}

.page-pintuan-share .activity-list .activity-item .item-inner .goods-price .price {
    max-width: 60%;
    display: flex;
    align-items: center;
}

.page-pintuan-share .activity-list .activity-item .item-inner .goods-price .price .new-price {
    font-size: 15px;
    margin-right: 5px;
    color: #ff2d4b;
}

.page-pintuan-share .activity-list .activity-item .item-inner .goods-price .price .old-price {
    color: #999;
    font-size: 12px;
    text-decoration: line-through;
}

.page-pintuan-share .activity-list .activity-item .item-inner .goods-price .sell {
    font-size: 12px;
    color: #999;
}