@import "../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 14px;
}

.pintuan-detail {
    padding-bottom: 50px;
    line-height: 1;
}

.pintuan-detail .swiper-danmu {
    position: fixed;
    top: 60px;
    left: 10px;
    z-index: 1000;
    height: 34px;
    width: 220px;
    align-items: center;
    box-sizing: border-box;
    opacity: 1;
    transition: opacity 1500ms;
    border-radius: 34px;
}

.pintuan-detail .order-danmu {
    display: flex;
    height: 100%;
    box-sizing: border-box;
    padding: 2px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    color: #fff;
    overflow: hidden;
    background: #26ce61;
    border-radius: 34px;
}

.pintuan-detail .right-btn {
}

.pintuan-detail .order-danmu image {
    border-radius: 100%;
    height: 30px;
    width: 30px;
}

.pintuan-detail .order-danmu text {
    display: inline-block;
    font-size: 14px;
}

.pintuan-detail .order-danmu .info {
    vertical-align: middle;
    max-width: 160px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    margin: 0 2px;
}

.pintuan-detail .order-danmu .time {
    margin-right: 5px;
}

.pintuan-detail .goods-info .thumb {
    width: 100%;
    max-height: 162px;
    font-size: 0px;
    border-radius: 3px;
    overflow: hidden;
    position: relative;
}

.pintuan-detail .goods-info .thumb image {
    width: 100%;
    max-height: 162px;
}

.pintuan-detail .goods-info .thumbs {
    width: 100%;
    height: 162px;
    border-radius: 3px;
    overflow: hidden;
}

.pintuan-detail .goods-info .title {
    padding: 8px 0;
    line-height: 1.3;
    font-weight: 500;
}

.pintuan-detail .step .step-number {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    margin-right: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000;
    color: #fff;
    font-size: 10px;
}

.comment {
    background-color: #fff;
    margin-top: 10px;
    padding-left: 15px;
}

.comment .no-comment {
    padding: 20px 15px 20px 0;
    text-align: center;
    background-color: #fff;
    color: #999;
    font-size: 14px;
}

.comment .avatar image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.comment .basic {
    padding-left: 10px;
    flex: 1;
}

.comment .comment-item {
    margin-left: 60px;
}

.comment .comment-item .text {
    font-size: 13px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
}

.comment .comment-item .thumbs image {
    width: 100%;
    height: 60px;
    border-radius: 3px;
}

.comment .comment-item .thumbs {
    position: relative;
    font-size: 0px;
    margin: 0 -5px;
    box-sizing: border-box;
}

.comment .comment-item .thumbs .col-25 {
    box-sizing: border-box;
    font-size: 0px;
    padding: 0 5px;
}

.comment .comment-item .thumbs-num {
    position: absolute;
    right: 5px;
    bottom: 0;
    color: #fff;
    background-color: rgba(0,0,0,0.5);
    font-size: 11px;
    padding: 3px 5px;
}

.comment .comment-item .comment-tags {
    display: flex;
    flex-flow: row nowrap;
    align-items: flex-start;
}

.comment .comment-item .comment-tags .icon-tag {
    margin-top: 2px;
}

.comment .comment-item .tags-wrap {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    line-height: 1.3;
}

.comment .item-star-box {
    width: 70px;
    position: relative;
}

.comment .stars-bg {
    color: #ff2d4b;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    white-space: nowrap;
    margin-top: -2px;
}

.comment .item-star-box .stars {
    width: 75%;
    margin-top: -2px;
    overflow: hidden;
    white-space: nowrap;
}

.pintuan-detail .activity-list {
    padding: 7.5px;
    background-color: #fff;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
}

.pintuan-detail .activity-list .activity-item {
    width: 50%;
}

.pintuan-detail .activity-list .activity-item .item-inner {
    color: #333;
    padding: 7.5px;
}

.pintuan-detail .activity-list .activity-item .item-inner .thumb {
    width: 100%;
    height: 162px;
    font-size: 0px;
    border-radius: 3px;
    overflow: hidden;
    position: relative;
}

.pintuan-detail .activity-list .activity-item .item-inner .thumb .mark {
    position: absolute;
    width: 44px;
    height: 28px;
    top: 0;
    left: 10px;
    padding-top: 4px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% 100%;
    color: #fff;
    font-size: 12px;
    text-align: center;
}

.pintuan-detail .activity-list .activity-item .item-inner .thumb image {
    width: 100%;
    height: 100%;
}

.pintuan-detail .activity-list .activity-item .item-inner .goods-title {
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.2;
    padding: 8px 10px;
    height: 33px;
    background-color: #fff;
}

.pintuan-detail .activity-list .activity-item .item-inner .goods-price {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 0 10px 10px;
    background-color: #fff;
}

.pintuan-detail .activity-list .activity-item .item-inner .goods-price .price {
    max-width: 60%;
    display: flex;
    align-items: center;
}

.pintuan-detail .activity-list .activity-item .item-inner .goods-price .price .new-price {
    font-size: 13px;
    margin-right: 5px;
    color: #ff2d4b;
}

.pintuan-detail .activity-list .activity-item .item-inner .goods-price .price .old-price {
    color: #999;
    font-size: 12px;
    text-decoration: line-through;
}

.pintuan-detail .activity-list .activity-item .item-inner .goods-price .sell {
    font-size: 12px;
    color: #999;
}

.pintuan-detail .wait-list .wait-item {
    background-color: #eee;
    margin-top: 15px;
    padding: 15px;
    overflow: hidden;
}

.pintuan-detail .wait-list .wait-item .wait-left {
    float: left;
    box-sizing: border-box;
    width: 25%;
}

.pintuan-detail .wait-list .wait-item .wait-left .user-avatar {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    overflow: hidden;
}

.pintuan-detail .wait-list .wait-item .wait-left .nickname {
    flex: 1;
    font-size: 12px;
    padding-left: 5px;
}

.pintuan-detail .wait-list .wait-item .wait-left .user-avatar image {
    width: 100%;
    height: 100%;
}

.pintuan-detail .wait-list .wait-item .wait-right {
    float: left;
    box-sizing: border-box;
    width: 75%;
}

.pintuan-detail .wait-list .wait-item .wait-right .btn-take {
    padding: 6px 5px;
    border-radius: 30px;
    color: #fff;
    font-size: 11px;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.goods-action {
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    height: 50px;
    background-color: #fff;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.goods-action .mini-btn {
    min-width: 15%;
    height: 50px;
    font-size: 12px;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    color: #666;
    line-height: 1;
}

.goods-action .mini-btn.is_favor {
    color: #ff2d4b;
}

.goods-action .mini-btn .icon {
    font-size: 18px;
    margin-bottom: 5px;
}

.goods-action .big-btn {
    flex: 1;
    height: 50px;
    text-align: center;
    font-size: 15px;
    color: #fff;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.goods-action .big-btn.btn-buy {
    background: linear-gradient(to right,#FFBC2D,#FF9B2C);
}

.goods-action .big-btn.disabled {
    background-color: #e8e8e8;
    color: #999;
}