@import "../../../nmy/0.wxss";

page {
    background-color: #f5f5f5;
    font-size: 15px;
}

.page-pintuan-index {
    line-height: 1;
}

.page-pintuan-index .pintuan-title {
    padding: 15px;
    font-size: 14px;
    color: #ff2d4b;
    background-color: #fff;
    margin-top: 10px;
}

.page-pintuan-index .pintuan-item {
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    color: #333;
    padding: 15px;
}

.page-pintuan-index .pintuan-item:first-child {
    padding-top: 0px;
}

.page-pintuan-index .pintuan-item .thumb {
    position: relative;
    width: 100px;
    height: 100px;
    border-radius: 2px;
    overflow: hidden;
}

.page-pintuan-index .pintuan-item .thumb image {
    width: 100%;
    height: 100%;
}

.page-pintuan-index .pintuan-item .thumb .mark {
    position: absolute;
    width: 44px;
    height: 28px;
    top: 0;
    left: 10px;
    padding-top: 4px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% 100%;
    color: #fff;
    font-size: 12px;
    text-align: center;
}

.page-pintuan-index .pintuan-item .info {
    flex: 1;
    padding-left: 10px;
    height: 100px;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: space-between;
}

.page-pintuan-index .pintuan-item .info .info-store {
    font-size: 15px;
    width: 100%;
}

.page-pintuan-index .pintuan-item .info .store-title {
    margin-bottom: 10px;
}

.page-pintuan-index .pintuan-item .info .info-price {
    display: flex;
    flex-flow: row nowrap;
    align-items: flex-end;
    justify-content: space-between;
    width: 100%;
}

.page-pintuan-index .pintuan-item .info .info-price .price {
    display: flex;
    align-items: center;
}

.page-pintuan-index .pintuan-item .info .info-price .price .now-price {
    font-size: 15px;
    margin-right: 5px;
    color: #ff2d4b;
}

.page-pintuan-index .pintuan-item .info .info-price .price .old-price {
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
}

.page-pintuan-index .pintuan-item .info .info-price .price .discount {
    position: relative;
    padding: 3px 5px 3px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    background-color: #FED4D5;
    color: #C51C33;
    margin-left: 15px;
}

.page-pintuan-index .pintuan-item .info .info-price .price .discount:before {
    content: "";
    display: block;
    border-width: 8px;
    position: absolute;
    left: -8px;
    transform: translateX(-50%);
    border-style: solid dashed dashed;
    border-color: transparent #FED4D5 transparent transparent;
    font-size: 0;
    line-height: 0;
    z-index: 10;
}

.page-pintuan-index .pintuan-item .info .info-price .progress-bar {
    width: 150px;
    height: 14px;
    border-radius: 20px;
    background-color: #FED4D5;
    position: relative;
    margin-top: 5px;
}

.page-pintuan-index .pintuan-item .info .info-price .progress-bar.bar-end {
    background-color: #959595;
}

.page-pintuan-index .pintuan-item .info .info-price .progress-bar .bar-inner {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    bottom: 0;
    border-radius: 20px;
    background: linear-gradient(to right,#FD6131,#FE0000);
}

.page-pintuan-index .pintuan-item .info .info-price .progress-bar .bar-text {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    bottom: 0;
    padding-left: 10px;
    display: flex;
    align-items: center;
    font-size: 10px;
    color: #fff;
    min-width: 80px;
}

.page-pintuan-index .pintuan-item .info .info-price .btn {
    color: #fff;
    font-size: 14px;
    padding: 5px 7px;
    border-radius: 3px;
    border: 0px;
}

.page-pintuan-index .pintuan-item .info .info-price .btn.btn-end {
    background-color: #959595;
}

.page-pintuan-index .pintuan-item .info .info-price .btn.btn-detail {
    background: linear-gradient(to right,#FC6030,#FF0101);
}