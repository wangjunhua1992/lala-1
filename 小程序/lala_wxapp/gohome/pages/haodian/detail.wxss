    font-size: 15px;
    height: 30px;
    line-height: 30px;
    text-align: center;
}

.haodian-detail .activity-header .more {
    position: absolute;
    right: 10px;
    bottom: 0;
    line-height: 30px;
    color: #999;
    font-size: 12px;
