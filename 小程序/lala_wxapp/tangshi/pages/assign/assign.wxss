.container .content {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #ff2d4b;
    overflow: auto;
}

.container .content .wrapper {
    position: absolute;
    top: 50px;
    bottom: 50px;
    right: 20px;
    left: 20px;
    background-color: #fff;
}

.container .content .wrapper .logo {
    width: 70px;
    height: 70px;
    position: absolute;
    top: -35px;
    left: 50%;
    margin-left: -35px;
}

.container .content .wrapper .logo image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: none;
}

.container .content .wrapper .title {
    padding: 0 15px;
    margin-top: 50px;
    text-align: center;
    color: #ff2d4b;
    font-size: 16px;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container .content .wrapper .divide {
    position: relative;
    height: 6px;
    padding: 10px 0;
}

.container .content .wrapper .divide .divide-line {
    margin: 0 10px;
    height: 0;
    font-size: 0;
    border-top: 2px dashed #ff2d4b;
}

.container .content .wrapper .divide::before,.container .content .wrapper .divide::after {
    content: "";
    position: absolute;
    top: 0;
    background-color: #ff2d4b;
    width: 20px;
    height: 20px;
    border-radius: 50%;
}

.container .content .wrapper .divide::before {
    left: -10px;
}

.container .content .wrapper .divide::after {
    right: -10px;
}

.container .content .wrapper .operation {
    position: absolute;
    top: 104px;
    right: 20px;
    bottom: 110px;
    left: 20px;
    padding: 15px;
    border-radius: 3px;
    background-color: #f5f5f5;
    text-align: center;
    color: #6A6A6A;
}

.container .content .wrapper .operation .operation-item {
    padding: 10px;
    border-radius: 5px;
    font-size: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container .content .wrapper .operation .operation-item.active {
    color: #fff;
    background-color: #ff2d4b;
}

.container .content .wrapper .operation .operation-item .font-12 {
    font-size: 12px;
}

.container .content .wrapper .submit {
    position: absolute;
    bottom: 56px;
    left: 20px;
    right: 20px;
    padding: 10px;
    border-radius: 50px;
    font-size: 16px;
    line-height: 16px;
    text-align: center;
    background-color: #ff2d4b;
    color: #fff;
}

.container .content .wrapper .tip {
    position: absolute;
    bottom: 0px;
    width: 90%;
    padding: 18px;
    font-size: 14px;
    text-align: center;
    color: #6a6a6a;
}

.container .content .wrapper .line {
    position: absolute;
    width: 100%;
    bottom: -3px;
    border-bottom: 3px dotted #fff;
}