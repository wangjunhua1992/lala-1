.br {
    border: 1px solid red;
}

.page-reserve .order-days {
    height: 55px;
    width: 100%;
    background: #eeeeee;
}

.page-reserve .order-days scroll-view {
    width: 100%;
    height: 100%;
    white-space: nowrap;
}

.page-reserve .order-days .day-item {
    width: 33.333333333%;
    height: 100%;
    display: inline-block;
    box-sizing: border-box;
}

.page-reserve .order-days .day-item.active {
    background-color: #ff2d4b;
    color: #fff;
}

.page-reserve .order-days .day-item view {
    width: 100%;
    height: 50%;
    text-align: center;
    align-item: center;
    font-size: 14px;
    line-height: 22px;
}

.page-reserve .order-con {
    width: 100%;
    box-sizing: border-box;
    padding: 15px 10px 0;
}

.page-reserve .order-con .title {
    font-size: 18px;
    font-weight: bold;
    line-height: 1.2;
    border-left: 3px solid #ff2d4b;
    padding-left: 6px;
}

.page-reserve .order-con .order-price {
    font-size: 12px;
    color: #999;
    margin: 10px 0;
}

.page-reserve .order-con .times {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    border-bottom: 10px solid #eeeeee;
    margin-bottom: 18px;
}

.page-reserve .order-con .times .times-wrap {
    width: 33.33%;
    text-align: center;
}

.page-reserve .order-con .time-item {
    width: 100px;
    height: 28px;
    line-height: 28px;
    border: 1px solid #959595;
    border-radius: 4px;
    text-align: center;
    font-size: 14px;
    color: #959595;
    margin: 0 auto 10px;
}

.page-reserve .order-con .time-item.border-red {
    border: 1px solid #ff2d4b;
    color: #ff2d4b;
}