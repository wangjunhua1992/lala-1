page {
    background: #F3F3F3;
    font-size: 14px;
    width: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.page-spread-index .content .header-info {
    background-color: #ff2d4b;
    color: #fff;
    padding: 20px 15px 30px;
}

.page-spread-index .content .header-info .header-title {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
}

.page-spread-index .content .header-info .header-title .spreader-info {
    display: flex;
    align-items: center;
}

.page-spread-index .content .header-info .header-title .spreader-info .avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    border: 2px solid #fff;
    overflow: hidden;
    background-color: #fff;
    margin-right: 10px;
}

.page-spread-index .content .header-info .header-title .spreader-info .avatar image {
    width: 100%;
    height: 100%;
}

.page-spread-index .content .header-info .header-title .spreader-info .member {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
}

.page-spread-index .content .header-info .header-title .spreader-info .member .nickname {
    max-width: 150px;
    font-weight: 500;
    font-size: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.page-spread-index .content .header-info .header-title .spreader-info .member .group-name {
    font-size: 12px;
    padding: 1px 4px;
    border-radius: 3px;
    background-color: #fff;
    color: #ff2d4b;
    margin-left: 10px;
}

.page-spread-index .content .header-info .header-title .spreader-info .number {
    font-size: 14px;
}

.page-spread-index .content .header-info .header-title .icon-qrcode {
    font-size: 30px;
}

.page-spread-index .content .header-info .header-getcash {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    font-size: 13px;
    padding: 5px 0;
}

.page-spread-index .content .link-group {
    position: absolute;
    top: 134px;
    left: 15px;
    right: 15px;
    border-radius: 3px;
    overflow: hidden;
}

.page-spread-index .content .weui-cells:before {
    border-top: 0px;
}

.page-spread-index .content .weui-cells:after {
    border-bottom: 0px;
}

.page-spread-index .content .weui-cells .weui-cell:before {
    border-top: 0.5px solid #eaeaea;
}

.page-spread-index .content .link-group .weui-cell .icon {
    font-size: 18px;
    margin-right: 8px;
}

.page-spread-index .content .link-group .weui-cell .icon-refund {
    color: #0894ec;
}

.page-spread-index .content .link-group .weui-cell .icon-list {
    color: #AFD728;
}

.page-spread-index .content .link-group .weui-cell .icon-sort {
    color: #0894ec;
}

.page-spread-index .content .link-group .weui-cell .icon-order {
    color: #AFD728;
}

.page-spread-index .content .link-group .weui-cell .icon-friend {
    color: #0894ec;
}

.page-spread-index .content .link-group .weui-cell .icon-hot1 {
    color: #AFD728;
}

.page-spread-index .content .link-group .weui-cell .weui-cell__bd {
    font-size: 15px;
}

.page-spread-index .content .link-group .weui-cell .weui-cell__ft {
    font-size: 14px;
}

.page-spread-index .content .link-group .spread-button {
    padding: 15px 0;
}

.page-spread-index .content .link-group .spread-button .invite {
    background-color: #ff2d4b;
    color: #fff;
    border-radius: 3px;
    text-align: center;
    padding: 10px 0;
}

.page-spread-index .content .wui-dialog .share {
    overflow: hidden;
}

.page-spread-index .content .wui-dialog .share .share-item {
    width: 33.33%;
    text-align: center;
    font-size: 13px;
    color: #7a7a7a;
    padding: 40px 0 20px;
    float: left;
}

.page-spread-index .content .wui-dialog .share .share-item image {
    width: 60px;
    height: 60px;
}

.page-spread-index .content .wui-dialog .icon-close {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 18px;
    color: #7a7a7a;
}

.page-spread-index .wui-dialog.wui-dialog-show .wui-dialog-container {
    transform: translateY(-50px);
}