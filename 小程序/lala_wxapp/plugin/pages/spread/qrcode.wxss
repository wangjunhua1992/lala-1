page {
    background: #F3F3F3;
    font-size: 14px;
    width: 100%;
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.page-spread-qrcode {
    background-size: 100% 100%;
    height: 100%;
    width: 100%;
}

.page-spread-qrcode .content .tips {
    text-align: center;
    padding-top: 15%;
    font-size: 18px;
    color: #fff;
}

.page-spread-qrcode .content .qrcode-wrap {
    width: 260px;
    height: 280px;
    margin: 5% auto 0;
    text-align: center;
    background-size: 100% 100%;
}

.page-spread-qrcode .content .qrcode-wrap image {
    width: 161px;
    height: 161px;
    margin-top: 90px;
    pointer-events: auto;
}

.page-spread-qrcode .content .explain {
    text-align: center;
    margin: 15px 30px 0px;
    line-height: 1.5;
    font-size: 18px;
    color: #fff;
}