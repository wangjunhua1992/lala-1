page {
    background: #f4f4f4;
}

.page-poster {
    padding-bottom: 90px;
}

.page-poster .page-photo {
    width: 100%;
    height: 100%;
}

.page-poster .page-photo .user-img {
    width: 100%;
}

.page-poster .text-title {
    margin: 5px 12px;
    position: relative;
    padding-left: 20px;
    color: #ccc;
    font-size: 16px;
}

.page-poster .text-title .icon {
    position: absolute;
    top: -4px;
    left: 0px;
    font-size: 16px;
}

.page-poster .list-group {
    background: #fff;
}

.page-poster .list-group .wui-cell .cell-text-title {
    font-size: 16px;
}

.page-poster .list-group .wui-cell .cell-list-text {
    padding-left: 5px;
    color: #666;
}

.page-poster .list-group .wui-cell:last-child::after {
    border-top: 0;
}

.page-poster .explain {
    background-color: #fff;
    text-align: center;
    padding-bottom: 22px;
    padding-top: 22px;
    margin-top: 10px;
}

.page-poster .explain .explain-text {
    width: 88%;
    background-color: #FF934A;
    display: inline-block;
    color: #fff;
    padding: 6px;
    font-size: 14px;
    text-align: left;
}

.page-poster .explain .explain-text view {
    display: inline-block;
    float: left;
}

.save {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: #fff;
    text-align: center;
}

.save .save-btn {
    padding: 10px 40px;
    font-size: 14px;
    background-color: #FF5553;
    color: #fff;
    display: inline-block;
    position: relative;
    top: -22px;
    border-radius: 19px;
}

.save .cue {
    font-size: 14px;
    color: #ACACAC;
    position: relative;
    top: -5px;
}