page {
    background: #F5F5F5;
}

.content {
    width: 100%;
    background: #f5f5f5;
}

.content::-webkit-scrollbar {
    display: none;
}

.content .wheel-label {
    position: relative;
    width: 100%;
    height: 45px;
    white-space: nowrap;
    background-color: #fff;
    color: #333;
}

.content .wheel-label .wheel-item {
    display: inline-block;
    height: 100%;
    width: 33.33%;
    margin: 0;
    line-height: 45px;
    text-align: center;
    font-size: 14px;
    position: relative;
}

.content .wheel-label .wheel-item.active {
    color: #f44;
}

.content .wheel-label .wheel-item.active:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2px solid #f44;
}

.content .record-item {
    width: 100%;
    margin-top: 10px;
    background: #fff;
    padding-left: 25px;
}

.content .record-item .record-body {
    width: 100%;
    padding: 10px 0;
    color: #333;
    text-align: left;
}

.content .record-item .record-body .record-inner {
    font-size: 14px;
    margin: 5px 0;
    line-height: 26px;
}

.content .record-item .record-body .record-inner .record-text-left {
    display: inline-block;
    width: 20%;
    color: #a3a3a3;
    white-space: nowrap;
    overflow: hidden;
}

.content .record-item .record-body .record-inner .record-text-right {
    display: inline-block;
    width: 70%;
    white-space: nowrap;
    overflow: hidden;
}

.content .record-item .record-body .record-footer {
    padding: 10px 0 0;
    margin-right: 10px;
    border-top: 1px solid #e0e0e0;
    overflow: hidden;
}

.content .record-item .record-body .record-footer .record-status {
    display: inline-block;
    float: right;
    margin-right: 30px;
    font-size: 14px;
    padding: 5px 0;
    width: 70px;
    border: 1px solid #ccc;
    text-align: center;
    border-radius: 3px;
    color: #333;
}