.container .content {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #f5f5f5;
    overflow-x: hidden;
    overflow-y: scroll;
}

.container .content::-webkit-scrollbar {
    display: none;
}

.container .content .coupon-list {
    display: block;
}

.container .content .coupon-list .coupon-item {
    display: block;
    position: relative;
    margin: 10px;
    background-color: #fff;
}

.container .content .coupon-list .coupon-item.active {
    opacity: 0.6;
}

.container .content .coupon-list .coupon-item .coupon-item-top {
    display: -webkit-box;
    padding: 15px 15px;
    position: relative;
    overflow: hidden;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left {
    position: relative;
    float: left;
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    width: 70%;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .seller-img {
    float: left;
    width: 55px;
    height: 55px;
    border: 1px solid #E4E4E4;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .seller-img image {
    width: 100%;
    height: 100%;
    border: none;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .seller {
    display: block;
    float: left;
    width: 65%;
    margin-left: 10px;
}

.container.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .seller .seller-name {
    line-height: 16px;
    font-size: 16px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #2f2f2f;
    padding-bottom: 3px;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .seller .seller-type {
    width: 46px;
    height: 20px;
    line-height: 20px;
    background: #fff;
    font-size: 12px;
    color: #FFA511;
    text-align: center;
    border: 1px solid #FFA511;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .seller .coupon-expires {
    font-size: 11px;
    color: #666;
    line-height: 12px;
    padding-top: 3px;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .overdue {
    display: block;
    position: absolute;
    width: 70px;
    height: 70px;
    top: -5px;
    right: -10px;
    z-index: 100;
    background-image: url(http://cos.lalawaimai.com/we7_wmall/wxapp/wu.png);
    background-size: 100%;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-left .use {
    display: block;
    position: absolute;
    width: 70px;
    height: 70px;
    top: -5px;
    right: -10px;
    z-index: 100;
    background-image: url(http://cos.lalawaimai.com/we7_wmall/wxapp/wu.png);
    background-size: 100%;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-right {
    text-align: right;
    width: 30%;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-right .coupon-money {
    font-size: 30px;
    color: #FB4E44;
    line-height: 35px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-right .coupon-money .money-unit {
    font-size: 24px;
    margin-right: -10px;
}

.container .content .coupon-list .coupon-item .coupon-item-top .coupon-item-right .coupon-condition {
    color: #666;
    font-size: 12px;
    line-height: 16px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.container .content .coupon-list .coupon-item-line {
    position: relative;
}

.container .content .coupon-list .coupon-item-line .line {
    border-top: 1px dashed #E6E6E6;
}

.container .content .coupon-list .coupon-item-line .line:before {
    content: '';
    position: absolute;
    top: -5px;
    left: -2px;
    z-index: 20;
    width: 5px;
    height: 10px;
    border-radius: 0 5px 5px 0;
    border: 1px solid #f6f6f6;
    background: #f6f6f6;
}

.container .content .coupon-list .coupon-item-line .line:after {
    content: '';
    position: absolute;
    top: -5px;
    right: -1px;
    z-index: 20;
    width: 5px;
    height: 10px;
    border-radius: 5px 0 0 5px;
    border: 1px solid #f6f6f6;
    background: #f6f6f6;
}

.container .content .coupon-list .coupon-item-bottom {
    padding: 5px 15px;
    position: relative;
    overflow: hidden;
}

.container .content .coupon-list .coupon-item-bottom .explain-text {
    width: 80%;
    float: left;
    line-height: 18px;
    color: #B3B3B3;
    font-size: 12px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.container .content .coupon-list .coupon-item-bottom .to-use {
    width: 20%;
    float: right;
    line-height: 18px;
    color: #FF2D4B;
    font-size: 12px;
    text-align: right;
}

.container .content .coupon-list .j-coupon-tip {
    margin: 20px 0;
    text-align: center;
    color: #666;
    line-height: 18px;
    font-size: 12px;
}

.container .content .coupon-list .j-coupon-tip .icon-right {
    font-size: 12px;
}