page {
    background: #f4f4f4;
}

.content .searchbar-container {
    position: relative;
    height: 48px;
    padding: 0 11px;
    background: #f7f7f8;
    backface-visibility: hidden;
}

.content .searchbar {
    margin: 0 -11px;
    padding: 9px 13px;
    background: #e8e8e8;
    overflow: hidden;
    height: 30px;
    -webkit-box-align: center;
    align-items: center;
    position: relative;
}

.content .searchbar .search-btn {
    position: absolute;
    top: 9px;
    right: -44px;
    width: 40px;
    float: right;
    height: 30px;
    line-height: 30px;
    text-align: center;
    transition: all .3s;
    opacity: 0;
    transform: translate3d(0,50,0);
    font-size: 0.7rem;
    color: #5f646e;
}

.content .searchbar .search-input {
    transition: all .3s;
    margin-right: 0;
    position: relative;
}

.content .searchbar .search-input .icon {
    position: absolute;
    font-size: 20px;
    color: #b4b4b4;
    top: 0;
    left: 6px;
    line-height: 30px;
}

.content .searchbar .search-input input {
    border: 0;
    margin: 0;
    height: 30px;
    padding-left: 30px;
    padding-right: 11px;
    box-sizing: border-box;
    width: 100%;
    display: block;
    border-radius: 5px;
    font-family: inherit;
    color: #3d4145;
    font-size: 15px;
    font-weight: normal;
    background-color: #fff;
}

.searchbar.searchbar-active .search-btn {
    right: 11px;
    opacity: 1;
    z-index: 2;
}

.searchbar.searchbar-active .search-btn+.search-input {
    margin-right: 48px;
}

.content .goods-list {
    padding: 7.5px;
    background-color: #fff;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    box-sizing: border-box;
}

.content .goods-list .goods-item {
    width: 33.33%;
    padding: 7.5px;
    box-sizing: border-box;
}

.content .item-inner .thumb {
    width: 90px;
    height: 90px;
    margin: 0 auto;
}

.content .item-inner .thumb image {
    width: 100%;
    height: 100%;
}

.content .item-inner {
    text-align: center;
}

.content .item-inner .goods-name {
    font-size: 13px;
    line-height: 1.2;
    margin: 5px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.content .item-inner .price {
    font-size: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.content .item-inner .price .need-credit {
    color: #ff2d4b;
    font-size: 15px;
    padding-right: 5px;
}

.content .item-inner .price .need-price {
    color: #ff2d4b;
    font-size: 15px;
}

.content .item-inner .exchange {
    margin-top: 8px;
    text-align: center;
    height: 20px;
}

.content .item-inner .exchange .exchange-btn {
    display: inline-block;
    padding: 2px 10px;
    font-size: 12px;
    border: 1px solid #ff2d4b;
    border-radius: 20px;
    color: #ff2d4b;
}