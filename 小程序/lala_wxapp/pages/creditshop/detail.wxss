page {
    background-color: #F4F4F4;
}

.content swiper {
    margin-top: 10px;
    height: 100px;
}

.content swiper image {
    width: 100%;
    height: 100%;
}

.container {
    padding-bottom: 10px;
}

.container .content {
    margin: 10px;
}

.container .content .shop-content {
    margin-top: 10px;
    background-color: #fff;
}

.container .content .shop-content .store-name {
    padding: 10px 15px;
}

.container .content .shop-content .store-name .name {
    display: inline-block;
    font-size: 14px;
    float: left;
    margin-top: 5px;
    margin-left: 5px;
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #7D7D7D;
}

.container .content .shop-content .food-list .food-item {
    padding: 10px;
    background-color: #f8f8f8;
    overflow: hidden;
    margin-bottom: 10px;
}

.container .content .shop-content .food-list .food-item:last-child {
    margin-bottom: 0;
}

.container .content .shop-content .food-list .food-item .food-item-img {
    display: inline-block;
    float: left;
    width: 55px;
    height: 55px;
    overflow: hidden;
}

.container .content .shop-content .food-list .food-item .food-item-img image {
    width: 100%;
    height: 100%;
}

.container .content .shop-content .food-list .food-item .food-item-price {
    float: right;
    display: inline-block;
    line-height: 20px;
}

.container .content .shop-content .food-list .food-item .food-item-price .now-price {
    text-align: right;
    font-size: 15px;
    color: #333;
    font-weight: 500;
}

.container .content .shop-content .food-list .food-item .food-item-price .old-price {
    text-align: right;
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
}

.container .content .shop-content .food-list .food-item .food-item-info {
    margin: 0 55px 0 65px;
}

.container .content .shop-content .food-list .food-item .food-item-info .food-item-name {
    line-height: 20px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
}

.container .content .shop-content .food-list .food-item .food-item-info .food-item-name .tags::before {
    padding: 0 3px;
}

.container .content .shop-content .food-list .food-item .food-item-info .food-item-num {
    line-height: 18px;
    color: #999;
    font-size: 12px;
}

.container .content .dispatching {
    padding: 15px 15px;
    background-color: #fff;
    margin-top: 10px;
}

.container .content .dispatching .time>view {
    float: left;
}

.container .content .dispatching .server>view {
    float: left;
}

.container .content .dispatching .text {
    font-size: 14px;
    color: #9A9A9A;
    margin-right: 15px;
}

.container .content .dispatching .time .main {
    font-size: 14px;
}

.container .content .dispatching .server .main {
    font-size: 14px;
}

.container .content .dispatching .server .main view {
    display: inline-block;
    float: left;
}

.container .content .dispatching .server .main view:last-child {
    margin-left: 5px;
}

.container .content .order {
    padding: 15px;
    margin-top: 10px;
    background-color: #fff;
    position: relative;
}

.container .content .order .code,.container .content .order .time {
    display: flex;
    align-items: center;
}

.container .content .order .code>view {
    display: inline-block;
    font-size: 14px;
}

.container .content .order .code text {
    color: #ff6600;
}

.container .content .order .time>view {
    display: inline-block;
    font-size: 14px;
}

.container .content .order .text {
    color: #9A9A9A;
    margin-right: 15px;
}

.container .content .order .copy {
    position: absolute;
    right: 15px;
    top: 15px;
    font-size: 12px;
    border: 1px solid #B4B4B4;
    padding: 2px 10px;
    border-radius: 3px;
}

.divide-line {
    height: 0;
    font-size: 0;
    border-top: 1px dotted #ddd;
    margin: 10px 0px;
}

.container .code-qrcode {
    padding: 15px;
    margin-top: 10px;
    background-color: #fff;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    line-height: 1;
}