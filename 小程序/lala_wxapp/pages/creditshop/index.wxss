    background-color: #f5f5f5;
    font-size: 14px;
    line-height: 1;
}

.creditshop-index .slide {
    box-sizing: border-box;
    height: 150px;
    padding: 10px;
    background-color: #fff;
}

.creditshop-index .slide image {
    display: inline-block;
    width: 100%;
    height: 100%;
}

.creditshop-index .slide .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 1px;
}

.creditshop-index .slide .wx-swiper-dot {
    width: 5px;
    display: inline-flex;
    height: 5px;
    margin-left: 3px;
    justify-content: space-between;
}

.creditshop-index .slide .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: rgba(255,255,255,0.8);
    border-radius: 100%;
}

.creditshop-index .slide .wx-swiper-dot-active {
    width: 5px;
}

.creditshop-index .slide .wx-swiper-dot-active::before {
    background: #ff2d4b;
}

.creditshop-index .cell-group {
    padding: 7px 0;
    background-color: #fff;
}

.creditshop-index .cell-group .icon-col {
    width: 25%;
    box-sizing: border-box;
    height: auto;
    position: relative;
    padding: 7px 0;
    text-align: center;
    float: left;
}

.creditshop-index .cell-group .icon-col .img {
    height: 48px;
    margin: auto;
    text-align: center;
    line-height: 48px;
}

.creditshop-index .cell-group .icon-col image {
    height: 100%;
    width: 48px;
    border-radius: 48px;
}

.creditshop-index .cell-group .icon-col .text {
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 12px;
    line-height: 1;
    padding: 11px 5px 0 5px;
}

.creditshop-index .creditshop-goods {
    margin-top: 10px;
}

.creditshop-index .creditshop-goods .goods-title-wrap {
    padding-left: 10px;
    background-color: #fff;
}

.creditshop-index .creditshop-goods .goods-title-wrap .goods-title {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 13px 10px 13px 0;
    position: relative;
}

.creditshop-index .creditshop-goods .goods-title-wrap .goods-title .title-left {
    display: flex;
    align-items: center;
    font-size: 14px;
}

.creditshop-index .creditshop-goods .goods-title-wrap .goods-title .title-left .icon {
    font-size: 18px;
    color: #999;
    margin-right: 5px;
}

.creditshop-index .creditshop-goods .goods-title-wrap .goods-title .title-right {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #999;
}

.creditshop-index .creditshop-goods .goods-list {
    padding: 7.5px;
    background-color: #fff;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    box-sizing: border-box;
}

.creditshop-index .creditshop-goods .goods-list .goods-item {
    width: 33.33%;
    padding: 7.5px;
    box-sizing: border-box;
}

.creditshop-index .creditshop-goods .item-inner .thumb {
    width: 90px;
    height: 90px;
    margin: 0 auto;
}

.creditshop-index .creditshop-goods .item-inner .thumb image {
    width: 100%;
    height: 100%;
}

.creditshop-index .creditshop-goods .item-inner {
    text-align: center;
}

.creditshop-index .creditshop-goods .item-inner .goods-name {
    font-size: 13px;
    line-height: 1.2;
    margin: 5px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.creditshop-index .creditshop-goods .item-inner .price {
    font-size: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.creditshop-index .creditshop-goods .item-inner .price .need-credit {
    color: #ff2d4b;
    font-size: 15px;
    padding-right: 5px;
}

.creditshop-index .creditshop-goods .item-inner .price .need-price {
    color: #ff2d4b;
    font-size: 15px;
}

.creditshop-index .creditshop-goods .item-inner .exchange {
    margin-top: 8px;
    text-align: center;
    height: 20px;
}

.creditshop-index .creditshop-goods .item-inner .exchange .exchange-btn {
    display: inline-block;
    padding: 2px 10px;
    font-size: 12px;
    border: 1px solid #ff2d4b;
    border-radius: 20px;
    color: #ff2d4b;
}