page {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background: #ccc;
}

map {
    width: 100%;
    height: 100%;
}

.map-refresh {
    position: fixed;
    top: 20px;
    right: 20px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    line-height: 30px;
    text-align: center;
}

.map-question {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    line-height: 30px;
    text-align: center;
}

.map-question .bg,.map-refresh .bg {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.4);
}

.map-question .img,.map-refresh .img {
    position: absolute;
    z-index: 10;
    width: 18px;
    height: 18px;
    top: 6px;
    left: 6px;
}