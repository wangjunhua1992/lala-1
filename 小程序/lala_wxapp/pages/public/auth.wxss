.page-auth {
    line-height: 1;
    font-size: 15px;
    text-align: center;
}

.page-auth .logo {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    font-size: 0px;
    margin: 80px auto 20px;
}

.page-auth .logo image {
    width: 100%;
    height: 100%;
}

.page-auth .title {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    margin: 20px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold;
    color: #27262F;
}

.page-auth .tips {
    margin: 20px 20px;
    padding: 25px 0;
    color: #444;
    box-shadow: 0px 0px 20px #dedede;
    border-radius: 2px;
}

.page-auth .buttons {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
}

.page-auth .buttons button {
    width: 40%;
}