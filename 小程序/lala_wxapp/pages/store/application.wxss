page {
    background: #f4f4f4;
}

.container .content .shopinfo {
    background: #fff;
}

.container .content .list {
    background: #fff;
    padding: 3px 0;
    padding-left: 15px;
}

.container .content .weui-cell {
    padding: 5px;
    font-size: 16px;
}

.container .content .weui-cell::before {
    border-top: 0;
}

.container .content textarea {
    height: 110px;
}

.container .content .store-aptitude {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 10px 25px;
    background-color: #fff;
}

.container .content .store-aptitude .aptitude-img {
    position: relative;
    height: 108px;
    width: 46%;
}

.container .content .store-aptitude .aptitude-img:first-child {
    margin-bottom: 18px;
}

.container .content .store-aptitude .aptitude-img:nth-child(2) {
    margin-bottom: 18px;
}

.container .content .store-aptitude .aptitude-img image {
    width: 100%;
    height: 100%;
    border: none;
}

.container .protocol {
    text-align: right;
    margin-top: 10px;
    font-size: 15px;
    margin-right: 10px;
    color: #B1B1B1;
}

.container .protocol navigator {
    color: #EC4C63;
    display: inline-block;
}

.container .btn-box {
    text-align: center;
    margin-top: 20px;
}

.container .content .btn-box button {
    line-height: normal;
}