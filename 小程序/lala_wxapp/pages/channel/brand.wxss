page {
    background: #f4f4f4;
}

.icon-b image {
    float: left;
    margin-top: 2px;
}

.container .content .banner {
    width: 100%;
    height: 150px;
}

.container .content .banner image {
    width: 100%;
    height: 100%;
}

.container .content .store-list .store-item {
    background: #fff;
    margin-bottom: 10px;
    padding: 0 15px;
    padding-bottom: 10px;
}

.container .content .store-list .store-item .store-info {
    padding-top: 20px;
    position: relative;
}

.container .content .store-list .store-item .store-info .avatar {
    width: 24%;
    height: 60px;
    float: left;
    display: inline-block;
}

.container .content .store-list .store-item .store-info .avatar image {
    width: 100%;
    height: 100%;
}

.container .content .store-list .store-item .store-info .store-detail {
    margin-left: 26%;
    width: 55%;
}

.container .content .store-list .store-item .store-info .store-name {
    font-size: 14px;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container .content .store-list .store-item .store-info .min-delivery>view {
    display: inline-block;
    float: left;
}

.container .content .store-list .store-item .store-info .min-delivery {
    font-size: 12px;
    color: #656565;
    height: 20px;
}

.container .content .store-list .store-item .store-info .min-delivery .line {
    margin: 5px 5px 0 5px;
    width: 0;
    height: 9px;
    font-size: 0;
    border-right: 1px solid #ccc;
}

.container .content .store-list .store-item .store-info .activity-box {
    width: 100%;
    height: 19px;
    position: relative;
}

.container .content .store-list .store-item .store-info .activity-box .activity-scroll {
    height: 100%;
}

.container .content .store-list .store-item .store-info .activity-box .activity-scroll .activity {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container .content .store-list .store-item .store-info .activity-box .activity-scroll .activity .tags {
    font-size: 12px;
    display: inline-block;
    float: left;
    text-align: center;
}

.container .content .store-list .store-item .store-info .activity-box .activity-scroll .activity text {
    font-size: 12px;
    float: left;
    color: #656565;
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container .content .store-list .store-item .store-info .in-store {
    display: inline-block;
    position: absolute;
    right: 0px;
    top: 20px;
    font-size: 12px;
    background: #ffce56;
    color: #fff;
    padding: 2px 10px;
    border-radius: 3px;
}

.container .content .store-list .store-item .goods {
    margin-top: 15px;
}

.container .content .store-list .store-item .goods .goods-item {
    display: inline-block;
    float: left;
    width: 32%;
    margin-right: 2%;
}

.container .content .store-list .store-item .goods .goods-item:last-child {
    margin-right: 0;
}

.container .content .store-list .store-item .goods .goods-item .goods-avatar {
    width: 100%;
    height: 65px;
}

.container .content .store-list .store-item .goods .goods-item .goods-avatar image {
    width: 100%;
    height: 100%;
}

.container .content .store-list .store-item .goods .goods-item .goods-name {
    width: 100%;
    font-size: 12px;
    text-align: center;
    color: #656565;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 3px;
}

.container .content .store-list .store-item .goods .goods-item .goods-price {
    font-size: 12px;
    color: #FD7C74;
    text-align: center;
    margin-top: 3px;
}

.container .content .store-list .store-item .goods .goods-item .goods-price .price {
    display: inline-block;
    font-size: 16px;
}