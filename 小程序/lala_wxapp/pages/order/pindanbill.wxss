page {
    background-color: #ff2d4b;
    background: linear-gradient(to bottom,#ff2d4b,#FF9331);
}

page .page-pindanbill {
    position: relative;
    width: 100%;
    font-size: 14px;
    line-height: 1;
}

.page-pindanbill .inner {
    position: relative;
    margin: 60px 10px 10px;
    background-color: #fff;
    border-radius: 3px;
    padding-top: 40px;
}

.page-pindanbill .inner .store-logo {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    left: 50%;
    transform: translate(-50%,-100%);
}

.page-pindanbill .inner .store-logo image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.page-pindanbill .inner .divide::before,.page-pindanbill .inner .divide::after {
    background-color: #ff2d4b;
}

.page-pindanbill .inner .user-item .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
}

.page-pindanbill .inner .user-item .avatar image {
    width: 100%;
    height: 100%;
}

.page-pindanbill .inner .user-item .nickname {
    max-width: 150px;
}

.page-pindanbill .inner .user-item .goods-list {
    background-color: #f5f5f5;
    padding: 0 10px 10px;
    margin-top: 10px;
    border-radius: 3px;
}

.page-pindanbill .inner .user-item .goods-list .van-row {
    padding-top: 10px;
}

.page-pindanbill .inner .plateform {
    padding: 30px 0;
}

.page-pindanbill .inner .plateform image {
    width: 28px;
    height: 28px;
    border-radius: 3px;
    overflow: hidden;
    margin-right: 10px;
}