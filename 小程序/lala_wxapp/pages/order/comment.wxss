page {
    background-color: #f4f4f4;
}

.container .content {
    margin: 10px;
    padding-bottom: 20px;
}

.container .content .label-container {
    background: #fff;
}

.container .content .order-title {
    padding: 15px 0;
    margin: 0 15px;
    border-bottom: 1rpx solid #ccc;
    margin-bottom: 15px;
}

.container .content .order-title .avatar {
    display: inline-block;
    float: left;
    width: 50px;
    height: 50px;
}

.container .content .order-title .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.container .content .label-container .order-title .order-content {
    margin-left: 60px;
    font-size: 16px;
}

.container .content .label-container .order-title .order-content .time {
    margin-top: 5px;
    font-size: 14px;
    height: 22px;
}

.container .content .label-container .label-content {
    text-align: center;
    padding-bottom: 20px;
}

.container .content .text {
    margin-bottom: 10px;
    font-size: 16px;
}

.container .content .star-box .i-star {
    display: inline-block;
    margin-left: 10px;
    width: 32px;
    height: 32px;
    background: url(http://cos.lalawaimai.com/we7_wmall/wxapp/newstars.png) no-repeat;
    background-size: 108px 30px;
    background-position: right center;
}

.container .content .star-box .i-star.i-star-light {
    background: url(http://cos.lalawaimai.com/we7_wmall/wxapp/newstars.png) no-repeat;
    background-size: 108px 30px;
    background-position: 0px center;
}

.container .content .label-container .label-content .label-box {
    max-height: 85px;
    overflow: hidden;
}

.container .content .label-container .label-content .label-box>view {
    display: inline-block;
    border: 1px solid #ccc;
    font-size: 12px;
    margin-left: 10px;
    border-radius: 2px;
    padding: 5px 10px;
    margin-top: 10px;
}

.container .content .label-container .label-content .label-box>view.active {
    border-color: #ff2d4b;
    color: #ff2d4b;
}

.container .content .comment-container {
    background: #fff;
    margin-top: 10px;
}

.container .content .comment-container .order-title .store-name {
    margin-left: 60px;
    height: 50px;
    line-height: 50px;
    font-size: 16px;
}

.container .content .comment-container .comment-content {
    margin: 0 15px;
    text-align: center;
    padding-bottom: 20px;
}

.container .content .comment-container .comment-content .score-box {
    position: relative;
    margin-top: 10px;
}

.container .content .comment-container .comment-content .score-box>view {
    display: inline-block;
}

.container .content .comment-container .comment-content .score-box .word {
    font-size: 14px;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(0,-50%);
}

.container .content .comment-container .comment-content .score-box .word view {
    display: inline-block;
    font-size: 12px;
}

.container .content .comment-container .comment-content .score-box .result {
    font-size: 14px;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translate(0,-50%);
    color: #797979;
}

.container .content .comment-container .comment-content .star .i-star {
    display: inline-block;
    margin-left: 10px;
    width: 20px;
    height: 20px;
    background: url(http://cos.lalawaimai.com/we7_wmall/wxapp/newstars.png) no-repeat;
    background-size: 72px 20px;
    background-position: right center;
}

.container .content .comment-container .comment-content .star .i-star.i-star-light {
    background: url(http://cos.lalawaimai.com/we7_wmall/wxapp/newstars.png) no-repeat;
    background-size: 72px 20px;
    background-position: left center;
}

.container .content .comment-container .comment-content textarea {
    width: auto;
    height: 120px;
    background: #f4f4f4;
    border: 1px solid #ececec;
    padding: 10px;
    font-size: 16px;
    text-align: left;
    margin-top: 15px;
}

.container .content .comment-container .comment-content .pic-box {
    margin-top: 20px;
    margin-bottom: 20px;
    position: relative;
}

.container .content .comment-container .comment-content .pic-box .pic-icon {
    float: left;
    width: 60px;
    height: 60px;
    line-height: 60px;
    text-align: center;
    border: 1px solid #ececec;
}

.container .content .comment-container .comment-content .pic-box .pic {
    float: left;
    width: 60px;
    height: 60px;
    border: 1px solid #fff;
    margin-right: 10px;
    position: relative;
}

.container .content .comment-container .comment-content .pic-box .pic image {
    width: 100%;
    height: 100%;
}

.container .content .comment-container .comment-content .pic-box .pic view {
    position: absolute;
    right: -5px;
    top: -5px;
    color: #fff;
    background-color: #FA553E;
    width: 18px;
    height: 18px;
    line-height: 15px;
    text-align: center;
    border-radius: 100%;
}

.container .content .comment-container .comment-content .pic-box .pic-icon .icon {
    font-size: 20px;
}

.container .content .comment-container .comment-content .pic-box .discription {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(0,-50%);
    margin-left: 80px;
    text-align: left;
    font-size: 15px;
}

.container .content .comment-container .comment-content .pic-box .discription>view:first-child {
    font-size: 16px;
}

.container .content .comment-container .comment-content .pic-box .discription>view:last-child {
    font-size: 12px;
    color: #797979;
}

.container .content .comment-container .comment-content .food-list {
    border-top: 1rpx solid #ccc;
}

.container .content .comment-container .comment-content .food-item {
    position: relative;
}

.container .content .comment-container .comment-content .food-item .food-name {
    font-size: 16px;
    padding-top: 15px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
}

.container .content .comment-container .comment-content .food-item .favor-oppose {
    position: absolute;
    right: 0;
    bottom: -6px;
}

.container .content .comment-container .comment-content .food-item .favor-oppose .radio-box {
    display: inline-block;
    width: 50px;
    height: 27px;
}

.container .content .comment-container .comment-content .food-item .favor-oppose .radio-box .favor {
    display: inline-block;
    width: 44px;
    height: 27px;
}

.container .content .comment-container .comment-content .food-item .favor-oppose .radio-box .oppose {
    display: inline-block;
    width: 44px;
    height: 27px;
}

.container .content .comment-container .comment-content .food-item .favor-oppose .radio-box image {
    width: 100%;
    height: 100%;
}

.container .content .btn-content {
    text-align: center;
    margin-top: 20px;
}