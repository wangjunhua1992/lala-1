page {
    background: #f4f4f4;
}

.cart-list {
    padding-bottom: 10px;
}

.cart-list .cart-item {
    padding-left: 15px;
    background: #fff;
    margin-bottom: 10px;
    position: relative;
}

.cart-list .cart-item .mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255,255,255,0.7);
}

.cart-list .cart-item .header {
    padding-right: 15px;
    height: 40px;
    line-height: 40px;
    position: relative;
}

.cart-list .cart-item .header navigator {
    display: flex;
    align-items: center;
    max-width: 80%;
}

.cart-list .cart-item .header navigator .avatar {
    width: 26px;
    height: 26px;
}

.cart-list .cart-item .header navigator .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.cart-list .cart-item .header navigator .store-title {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 15px;
    font-weight: bold;
    margin-left: 10px;
    line-height: 1;
}

.cart-list .cart-item .header .btn-delete {
    position: relative;
}

.cart-list .cart-item .header .btn-delete .icon {
    font-size: 16px;
}

.cart-list .cart-item .header .rest {
    font-size: 12px;
    border: 1px solid #000;
    width: 50px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    position: absolute;
    top: 50%;
    right: 15px;
    transform: translate(0,-50%);
}

.cart-list .cart-item .activity-box {
    font-size: 14px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 10px;
}

.cart-list .cart-item .activity-box text {
    color: #D45E74;
    border: 1px solid #D45E74;
    padding: 0px 4px;
    font-size: 13px;
}

.cart-list .cart-item .food-list {
    width: 100%;
}

.cart-list .cart-item .food-item {
    background-color: #F8F8F8;
    height: 75px;
    margin-bottom: 10px;
    margin-top: 10px;
    display: flex;
}

.cart-list .cart-item .food-item:first-child {
    margin-top: 3px;
}

.cart-list .cart-item .food-item .avatar {
    width: 60px;
    display: inline-block;
    height: 60px;
    margin: 8px 0;
    margin-left: 8px;
}

.cart-list .cart-item .food-item .avatar image {
    display: inline-block;
    width: 100%;
    height: 100%;
}

.cart-list .cart-item .food-item .food-block {
    margin: 5px 10px;
    width: 80%;
    position: relative;
}

.cart-list .cart-item .food-item .food-block .food-name {
    font-size: 14px;
    overflow: hidden;
    align-items: center;
}

.cart-list .cart-item .food-block .food-name .icon-b {
    margin-top: 3px;
}

.cart-list .cart-item .food-block .food-name .goods-title {
    flex: 1;
}

.cart-list .cart-item .food-block .info-group {
    font-size: 14px;
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    right: 0;
    height: 20px;
}

.cart-list .cart-item .food-block .info-group .num {
    display: inline-block;
    font-size: 12px;
    color: #9A9A9A;
}

.cart-list .cart-item .food-block .info-group .right {
    float: right;
    text-align: right;
}

.cart-item .food-block .info-group .right>view {
    display: inline-block;
}

.cart-item .food-block .info-group .right .old-price {
    margin-right: 5px;
    font-size: 12px;
    color: #9A9A9A;
    text-decoration: line-through;
}

.cart-item .food-block .info-group .right .price {
    font-weight: bold;
    font-size: 16px;
}

.cart-item .discount-box .discount-item {
    position: relative;
    height: 30px;
    line-height: 30px;
}

.cart-item .discount-box .name {
    display: inline-block;
    font-size: 14px;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
}

.cart-item .discount-box .price {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translate(0,-50%);
    font-size: 14px;
}

.cart-item .footer-group {
    font-size: 14px;
    position: relative;
    display: flex;
    height: 50px;
    align-items: center;
}

.cart-item .footer-group .discount {
    display: inline-block;
}

.cart-item .footer-group .pay-fee {
    display: inline-block;
    position: absolute;
    top: 50%;
    right: 106px;
    transform: translate(0,-50%);
    font-size: 16px;
    font-weight: bold;
    color: #FB4D43;
}

.footer-group .button {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translate(0,-50%);
    background: #ff2d4b;
    width: 80px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    border-radius: 1px;
    color: #fff;
}

.footer-group .button.button-danger {
    background: #EF4F4F;
    color: #fff;
}

.no-data image {
    width: 100px;
    height: 100px;
    position: absolute;
    left: 50%;
    top: 150px;
    transform: translate(-50%,0);
}

.no-data .target {
    position: absolute;
    left: 50%;
    top: 300px;
    transform: translate(-50%,0);
    font-size: 14px;
    background-color: #ff2d4b;
    padding: 5px 15px;
    border-radius: 15px;
    color: #fff;
}